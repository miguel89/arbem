<div class="row">
    <div class="col s11 servidor-table">
        <a class="btn-flat tooltipped"
           data-position="left"
           data-delay="50"
           data-tooltip="Incluir">
            <i class="fa fa-cubes left" aria-hidden="true"></i>
            {{ 'label.almoxarifado.requisicao.itens'|trans }}
        </a>
    </div>

    <table class="col s12 highlight bordered">
        <thead class="thead-rh">
        <tr><th class="th-rh" width="10">#</th>
            <th class="th-rh">{{ 'label.almoxarifado.requisicao.itensQuantidade'|trans }}</th>
            <th class="th-rh">{{ 'label.almoxarifado.requisicao.itensItem'|trans }}</th>
            <th class="th-rh">{{ 'label.almoxarifado.requisicao.itensTipoItem'|trans }}</th>
            <th class="th-rh">{{ 'label.almoxarifado.requisicao.itensMarca'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for requisicaoItem in object.fkAlmoxarifadoRequisicaoItens %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ requisicaoItem.quantidade|number_format(4, ',') }}</td>
                <td>{{ requisicaoItem.fkAlmoxarifadoCatalogoItem.descricao }}</td>
                <td>{{ requisicaoItem.fkAlmoxarifadoCatalogoItem.fkAlmoxarifadoTipoItem }}</td>
                <td>{{ requisicaoItem.fkAlmoxarifadoMarca.descricao }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
