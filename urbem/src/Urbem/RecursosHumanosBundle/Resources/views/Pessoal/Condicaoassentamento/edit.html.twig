{% extends "::base.html.twig" %}
{% block content %}
<div class="container">
    <div class="row">
        <div class="col l10">
            <h4 class="blue-text text-darken-4 title-filtro">Editar Condição Assentamento</h4>
        </div>
        <div class="hide-on-med-and-down col l2 right-align">
            {{ form_start(delete_form) }}
            <button class="top-btn btn waves-effect waves-light white-text blue darken-4 tooltipped" data-position="right" data-delay="50" data-tooltip="Excluir" value="Delete" type="submit" name="action"><i class="material-icons">delete</i></button>
            {{ form_end(delete_form) }}
        </div>
    </div>
    <div class="row">
        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
    </div>
    <div class="row">
        <div class="col s6">
            <a  class="btn-floating white-text blue darken-4" href="{{ path('pessoal_condicao_assentamento_index') }}"><i class="material-icons">arrow_back</i></a>
        </div>
        <div class="col s6 right-align">
            <button type="submit" class="waves-effect waves-light btn blue darken-4" value="Edit">Salvar</button>
            {{ form_end(edit_form) }}
        </div>
    </div>
</div>
{% endblock content %}

