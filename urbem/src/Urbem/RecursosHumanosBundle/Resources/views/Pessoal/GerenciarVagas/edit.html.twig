{% extends "base.html.twig" %}
{% block content %}
<div class="container-rh">
    <div class="col s12 title-edit">
        <h5>{{ 'editar'|trans }}</h5>
        <div class="divider grey title-divider"><p>1</p></div>
    </div>
    <div class="row">
        {{ form_start(edit_form) }}
        <div class="col s3 field-filtro select-filtro">
            {{ form_label(edit_form.nroVagaCriada, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(edit_form.nroVagaCriada, {'attr': {'class': 'white input-rh browser-default'}}) }}
        </div>
        <div class="col s3 field-filtro select-filtro">
            {{ form_label(edit_form.codNorma, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(edit_form.codNorma, {'attr': {'class': 'white input-rh browser-default'}}) }}
        </div>
        <div class="col s3 field-filtro select-filtro">
            {{ form_label(edit_form.codSubDivisao, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(edit_form.codSubDivisao, {'attr': {'class': 'white input-rh browser-default'}}) }}
        </div>
        <div class="col s3 field-filtro select-filtro">
            {{ form_label(edit_form.codCargo, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(edit_form.codCargo, {'attr': {'class': 'white input-rh browser-default'}}) }}
        </div>
    {{ form_widget(edit_form) }}
    </div>
    <div class="row">
        <div class="col s6">
            <a class="btn-floating white-text blue darken-4" href="{{ path('pessoal_gerenciar_vagas_index') }}"><i class="material-icons">arrow_back</i></a>
        </div>
        <div class="col s6 right-align">
            <button type="submit" class="waves-effect waves-light btn blue darken-4">Salvar</button>
        </div>
        {{ form_end(edit_form) }}
    </div>
</div>
{% endblock %}
