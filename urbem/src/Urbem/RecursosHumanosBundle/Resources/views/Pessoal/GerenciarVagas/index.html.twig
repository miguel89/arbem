{% extends "base.html.twig" %}
{% block content %}
<div class="container-rh">
    <div class="row title-index filtro filtro-sonata z-depth-0 filtro-rh">
      <div class="col s3 field-filtro select-filtro">
        <label class="control-label label-rh" for="1">...</label>
        <input id="1" placeholder="Digite..." type="text" class="white input-rh browser-default">
      </div>
      <div class="col s1 busca-rh buscar center">
        <button type="submit" class="waves-effect waves-light btn blue darken-4"><i class="material-icons">search</i></button>
      </div>
    </div>
    <div class="row">
        <a class="left hide-on-med-and-down waves-effect waves-light btn blue darken-4 add-rh" href="{{ path('pessoal_gerenciar_vagas_new') }}"><i class="material-icons left icon-rh">add</i>Incluir</a>
    </div>
    <div class="row">
        <table class="bordered highlight">
            <thead class="thead-rh">
                <tr class="tr-rh">
                    <th class="th-rh">Id</th>
                    <th class="th-rh">Timestamp</th>
                    <th class="th-rh">nroVagaCriada</th>
                    <th class="th-rh">codNorma</th>
                    <th class="th-rh">codSubDivisao</th>
                    <th class="th-rh">codCargo</th>
                    <th class="th-rh">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for vaga in vagas %}
                <tr class="tr-rh">
                    <td class="td-rh"><a href="{{ path('pessoal_gerenciar_vagas_show', { 'id': vaga.id }) }}">{{ vaga.id }}</a></td>
                    <td class="td-rh">{% if vaga.timestamp %}{{ vaga.timestamp|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td class="td-rh">{{ vaga.nroVagaCriada }}</td>
                    <td class="td-rh">{{ vaga.codNorma.codNorma }}</td>
                    <td class="td-rh">{{ vaga.codSubDivisao.codSubDivisao }}</td>
                    <td class="td-rh">{{ vaga.codCargo.codCargo }}</td>
                    <td class="td-rh">
                        <div class="btn-group">
                            <a href="{{ path('pessoal_gerenciar_vagas_show', { 'id': vaga.id }) }}" data-position="left" data-delay="50" data-tooltip="Detalhe" class="btn btn-delete-sonata blue-text text-darken-4 transparent z-depth-0 hide-on-med-and-down tooltipped" data-tooltip-id="d5c891dc-189c-f92e-efa7-e36184b2038c">
                                <i class="fa fa-search-plus"></i>
                            </a>
                            <a href="{{ path('pessoal_gerenciar_vagas_edit', { 'id': vaga.id }) }}" data-position="bottom" data-delay="50" data-tooltip="Editar" class="btn btn-delete-sonata blue-text text-darken-4 transparent z-depth-0 hide-on-med-and-down tooltipped" data-tooltip-id="d5c891dc-189c-f92e-efa7-e36184b2038c">
                                <i class="material-icons">edit</i>
                            </a>
                            <button type="submit" class="btn btn-delete-sonata blue-text text-darken-4 transparent z-depth-0 hide-on-med-and-down tooltipped" data-position="right" data-delay="50" data-tooltip="Excluir" data-tooltip-id="3fac1630-635c-78bc-454d-e0e8301e2298">
                                <i class="material-icons">delete</i>
                            </button>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="center">
        {{ knp_pagination_render(vagas) }}
    </div>
</div>
{% endblock %}
