{% extends "base.html.twig" %}

{% block title %}{{ wo_render_breadcrumbs({ separator: '>', viewTemplate: "WhiteOctoberBreadcrumbsBundle::titlebreadcrumbs.html.twig" }) }}{% endblock title %}


{% block menu %}
    {% include '::partials/menu.html.twig' %}
{% endblock menu %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="input-field col s12 m12 l6">
            <input type="text" name="selecao-filtro">
            <label for="selecao-filtro">Seleção do Filtro</label>
        </div>

        <div class="input-field col s12 m12 l6">
            <input type="text" name="filtrar">
            <label for="filtrar">Filtrar</label>
        </div>

        <div class="input-field col s12 m12 l6">
            <select name="matricula">
                <option value="" selected>Selecione</option>
                <option value="0">Matricula</option>
                <option value="1">CGM/Matricula</option>
                <option value="2">Cargo</option>
                <option value="3">Função</option>
                <option value="4">Padrão</option>
                <option value="5">Lotação</option>
                <option value="6">Local</option>
            </select>
            <label for="matricula">Matrícula</label>
        </div>
    </div>
    <div class="row">
      <div class="col s6">
          <a  class="btn-floating white-text blue darken-4" href="{{ path('folha_pagamento_folha_ferias_index') }}"><i class="material-icons">arrow_back</i></a>
      </div>
      <div class="col s6 right-align">
          <button type="submit" class="waves-effect waves-light btn blue darken-4" value="Consultar">Calcular</button>
      </div>
    </div>
</div>
{% endblock content %}
