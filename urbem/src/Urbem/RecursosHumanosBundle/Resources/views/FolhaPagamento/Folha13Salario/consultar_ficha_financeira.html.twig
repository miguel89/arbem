{% extends "base.html.twig" %}
{% block content %}
<div class="container-rh">
    <div class="row">
        <div class="col s12">
            <div class="box-header">
                <h5 class="col s12 box-title-rh blue-text text-darken-4">{{ 'Consultar Ficha Financeira'|trans }}</h5>

                <div class="divider grey title-divider"><p>1</p></div>
            </div>


        </div>
        {{ form_start(form) }}
    </div>
    <div class="row">        

        <div class="col s3 field-filtro select-filtro">
            {{ form_label(form.inContrato, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.inContrato, {'attr': {'class': 'white input-rh form-control'}}) }}
            {{ form_errors(form.inContrato) }}
        </div>

        <div class="col s3 field-filtro select-filtro">
            {{ form_label(form.inAno, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.inAno, {'attr': {'class': 'white input-rh input-rh-date form-control'}}) }}
            {{ form_errors(form.inAno) }}
        </div>

        <div class="col s3 field-filtro select-filtro">
            {{ form_label(form.inCodMes, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.inCodMes, {'attr': {'class': 'white input-rh form-control'}}) }}
            {{ form_errors(form.inCodMes) }}
        </div>

        <div class="col s3 field-filtro select-filtro">
            {{ form_label(form.stConfiguracao, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.stConfiguracao, {'attr': {'class': 'white input-rh form-control'}}) }}
            {{ form_errors(form.stConfiguracao) }}
        </div>

        <div class="col s3 field-filtro">
            {{ form_label(form.boFiltrarFolhaComplementar, null, {'label_attr': {'class': 'control-label labelCheck-rh'}}) }}
            {{ form_widget(form.boFiltrarFolhaComplementar, {'attr': {'class': 'iCheck-helper browser-default icheckBox'}}) }}
            {{ form_errors(form.boFiltrarFolhaComplementar) }}
        </div>

        <div class="col s3 field-filtro radio-rh">
            {{ form_label(form.stOpcao, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.stOpcao, {'attr': {'class': 'white'}}) }}
            {{ form_errors(form.stOpcao) }}
        </div>

        <div class="col s6 field-filtro radio-rh">
            {{ form_label(form.stDesdobramento, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.stDesdobramento, {'attr': {'class': 'white'}}) }}
            {{ form_errors(form.stDesdobramento) }}
        </div>

        <div class="col s6 field-filtro radio-rh">
            {{ form_label(form.stOrdenacao, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.stOrdenacao, {'attr': {'class': 'white'}}) }}
            {{ form_errors(form.stOrdenacao) }}
        </div>

        <div class="col s12" style="display:none;">
            {{ form_widget(form.btnVisualizar, {'attr': {'class': 'waves-effect waves-light btn blue darken-4'}}) }}
            {{ form_widget(form.btnLimpar, {'attr': {'class': 'waves-effect waves-light btn blue darken-4'}}) }}
            {{ form_widget(form.btnImprimir, {'attr': {'class': 'waves-effect waves-light btn blue darken-4'}}) }}
        </div>

        {{ form_end(form) }}
    </div>
    <div class="row">
        <div class="col s8">
            <a  class="btn-floating white-text blue darken-4" href="{{ path('folhapagamento_folha_13_salario_index') }}"><i class="material-icons">arrow_back</i></a>
        </div>
        <div class="col s2 right-align">
            <button type="submit" class="waves-effect waves-light btn blue darken-4 tooltipped" data-position="left" data-delay="50" data-tooltip="Imprimir" value="Imprimir"><i class="material-icons">print</i></button>
        </div>
        <div class="col s2 left-align">
            <button type="submit" class="waves-effect waves-light btn blue darken-4" value="Calcular"><i class="mdi mdi-file-document left"></i>Consultar</button>
        </div>
    </div>
</div>
{% endblock content %}
