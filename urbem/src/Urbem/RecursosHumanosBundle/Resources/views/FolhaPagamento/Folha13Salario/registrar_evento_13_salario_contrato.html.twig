{% extends "base.html.twig" %}

{% block title %}{{ wo_render_breadcrumbs({ separator: '>', viewTemplate: "WhiteOctoberBreadcrumbsBundle::titlebreadcrumbs.html.twig" }) }}{% endblock title %}


{% block menu %}
    {% include '::partials/menu.html.twig' %}
{% endblock menu %}

{% block content %}
<div class="container-rh">
     <div class="row">
        <div class="col s12">
            <div class="box-header">
                <h5 class="col s12 box-title-rh">{{ 'Registrar Evento de 13° Salário por Contrato'|trans }}</h5>

                <div class="divider grey title-divider"><p>1</p></div>
            </div>


        </div>
        {{ form_start(form) }}
    </div>
    <div class="row">

        <div class="col s3 field-filtro select-filtro">
            {{ form_label(form.stTipoFiltro, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.stTipoFiltro, {'attr': {'class': 'white input-rh form-control'}}) }}
            {{ form_errors(form.stTipoFiltro) }}
        </div>

        <div class="col s3 field-filtro select-filtro">
            {{ form_label(form.inContrato, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.inContrato, {'attr': {'class': 'white input-rh form-control'}}) }}
            {{ form_errors(form.inContrato) }}
        </div>

         <div class="col s12" style="display:none;">
            {{ form_widget(form.btnOk, {'attr': {'class': 'waves-effect waves-light btn blue darken-4'}}) }}
            {{ form_widget(form.btnLimpar, {'attr': {'class': 'waves-effect waves-light btn blue darken-4'}}) }}
        </div>

        {{ form_end(form) }}
    </div>
    <div class="row">
        <div class="col s6">
            <a  class="btn-floating white-text blue darken-4" href="{{ path('folhapagamento_folha_13_salario_index') }}"><i class="material-icons">arrow_back</i></a>
        </div>
        <div class="col s6 right-align">
            <button type="submit" class="waves-effect waves-light btn blue darken-4" value="Registrar"><i class="material-icons left">save</i>Registrar</button>
        </div>
    </div>
</div>
{% endblock content %}
