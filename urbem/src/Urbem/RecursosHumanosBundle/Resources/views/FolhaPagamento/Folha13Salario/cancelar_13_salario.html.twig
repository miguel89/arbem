{% extends "base.html.twig" %}

{% block title %}{{ wo_render_breadcrumbs({ separator: '>', viewTemplate: "WhiteOctoberBreadcrumbsBundle::titlebreadcrumbs.html.twig" }) }}{% endblock title %}


{% block menu %}
    {% include '::partials/menu.html.twig' %}
{% endblock menu %}

{% block content %}
<div class="container-rh">
    <div class="row">
        <form name="conceder_13_salario" action="post">
            <div class="col s3 field-filtro select-filtro">
                <label class="control-label label-rh required" for="tipofiltro">Tipo de Filtro</label>
                <select id="tipofiltro" name="form[inContrato]" required="required" class="white input-rh form-control">
                    <option value="">Selecione</option>
                    <option value="contrato">Matrícula</option>
                    <option value="cgm_contrato">CGM/Matrícula</option>
                    <option value="lotacao">Lotação</option>
                    <option value="local">Local</option>
                    <option value="reg_sub_fun_esp">Regime/Subdivisão/Função/Especialidade</option>
                    <option value="geral">Geral</option>
                </select>
            </div>

            <div class="col s6 field-filtro">
                <label class="control-label label-rh required">Cancelar Lançamento na Folha</label>
                <div id="cancelar_lancamento_folha" class="white">
                    <input type="radio" id="cancelar_lancamento_folha_0" name="form[stDesdobramento]" required="required" value="A">
                    <label for="cancelar_lancamento_folha_0" class="required">13º Salário</label>
                    
                    <input type="radio" id="cancelar_lancamento_folha_2" name="form[stDesdobramento]" required="required" value="C">
                    <label for="cancelar_lancamento_folha_2" class="required">Salário</label>
                </div>            
            </div>
        </form>
    </div>
    <div class="row">
        <div class="col s6">
            <a  class="btn-floating white-text blue darken-4" href="{{ path('folhapagamento_folha_13_salario_index') }}"><i class="material-icons">arrow_back</i></a>
        </div>
        <div class="col s6 right-align">
            <button type="submit" class="waves-effect waves-light btn blue darken-4" value="Cancelar">Cancelar</button>
        </div>
    </div>
</div>
{% endblock content %}
