{% extends "base.html.twig" %}
{% block content %}
<div class="container-rh">
    <div class="">
        <div class="box-header">
            <h5 class="blue-text text-darken-4">Registrar Evento por Contrato</h5>
            <div class="divider grey title-divider"><p>1</p></div>
        </div>
    </div>
    <div class="row">
        <div class="col s3 field-filtro select-filtro">
            <label  class="control-label label-rh" for="selecao-filtro">Seleção do Filtro</label>
            <input class="input-rh" type="text" name="selecao-filtro">
        </div>

        <div class="col s3 field-filtro select-filtro">
            <label  class="control-label label-rh" for="filtrar">Filtrar</label>
            <input class="input-rh" type="text" name="filtrar">
        </div>

        <div class="col s3 field-filtro select-filtro">
            <label  class="control-label label-rh" for="tipofiltro">Tipo de Filtro</label>
            <select class="browser-default input-rh" name="tipocalculo">
                <option value="">Selecione</option>
                <option value="contrato">Matrícula</option>
                <option value="cgm_contrato">CGM/Matrícula</option>
                <option value="lotacao">Lotação</option>
                <option value="local">Local</option>
                <option value="atributo_servidor">Atributo Dinâmico Servidor</option>
                <option value="atributo_pensionista">Atributo Dinâmico Pensionista</option>
                <option value="geral">Geral</option>
            </select>
        </div>

        <div class="col s3 field-filtro select-filtro">
            <label  class="control-label label-rh" for="filtrar">Filtro por Matrícula</label>
            <input class="input-rh" type="text" name="filtrar">
        </div>

        <div class="col s3 field-filtro select-filtro">
            <label  class="control-label label-rh" for="filtrar">CGM</label>
            <input class="input-rh" type="text" name="filtrar">
        </div>
    </div>
    <div class="row">
        <div class="col s6">
            <a  class="btn-floating white-text blue darken-4" href="{{ path('folha_pagamento_folha_salario_index') }}"><i class="material-icons">arrow_back</i></a>
        </div>
        <div class="col s6 right-align">
            <button type="submit" class="waves-effect waves-light btn blue darken-4" value="Registrar"><i class="material-icons left">save</i>Registrar</button>
        </div>
    </div>
</div>
{% endblock content %}