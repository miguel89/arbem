{% extends "base.html.twig" %}
{% block content %}
<div class="container">
    <div class="row">
    </div>
    <div class="box-header">
        <h5 class="blue-text text-darken-4">Calcular Folha Salario</h5>
        <div class="divider grey title-divider"><p>1</p></div>
    </div>
    <div class="row">
        <div class="col s3 field-filtro">
            <label class="required" for="selecao-filtro">Seleção do Filtro</label>
            <input class="input-rh" type="text" name="selecao-filtro">
        </div>

        <div class="col s3 field-filtro">
            <label class="required" for="filtrar">Filtrar</label>
            <input class="input-rh" type="text" name="filtrar">
        </div>

         <div class="col s3 field-filtro">
            <label class="required" for="matricula">Matrícula</label>
           <select name="matricula" class="form-control white basic-multiple select2-parameters">
                <option value="" selected>Selecione</option>
                <option value="0">Matricula</option>
                <option value="1">CGM/Matricula</option>
                <option value="2">Cargo</option>
                <option value="3">Função</option>
                <option value="4">Padrão</option>
                <option value="5">Lotação</option>
                <option value="6">Local</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col s6">
            <a  class="btn-floating white-text blue darken-4" href="{{ path('folha_pagamento_folha_salario_index') }}"><i class="material-icons">arrow_back</i></a>
        </div>
        <div class="col s6 right-align">
            <button type="submit" class="waves-effect waves-light btn blue darken-4" value="Calcular"><i class="fa fa-calculator left" aria-hidden="true"></i>Calcular</button>
        </div>
    </div>
</div>
{% endblock content %}