{% extends "base.html.twig" %}

{% block title %}{{ wo_render_breadcrumbs({ separator: '>', viewTemplate: "WhiteOctoberBreadcrumbsBundle::titlebreadcrumbs.html.twig" }) }}{% endblock title %}


{% block menu %}
    {% include '::partials/menu.html.twig' %}
{% endblock menu %}

{% block content %}
<div class="container">
    <div class="row">
    </div>
    <div class="row">
        <div class="col s12 m12 l6">
            <table class="bordered striped">
                <thead>
                    <tr><h5 class="blue-text text-darken-4">Período de Movimentação em Aberto</h5></tr>
                </thead>
                <tbody>
                <tr>
                    <td>Data Inicial</td>
                    <td>{{ movimentacao.getDtInicial|date('d/m/Y') }}</td>
                </tr>
                <tr>
                    <td>Data Final</td>
                    <td>{{ movimentacao.getDtFinal|date('d/m/Y') }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col s12 m12 l6">
            <table class="bordered striped">
                <thead>
                    <tr><h5 class="blue-text text-darken-4">Folha Salário</h5></tr>
                </thead>
                <tbody>
                <tr>
                    <td>Competência Atual</td>
                    <td>{{ "now"|date('F') }}</td>
                </tr>
                <tr>
                    <td>Situação Atual</td>
                    {% if situacao %}
                        <td>Aberto em {{ situacao.getTimestamp()|date('d/m/Y H:i') }}</td>
                    {% else %}
                        <td>Não foi aberto</td>
                    {% endif %}
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col s8">
            <a  class="btn-floating white-text blue darken-4" href="{{ path('folha_pagamento_folha_salario_index') }}"><i class="material-icons">arrow_back</i></a>
        </div>
        <div class="col s2 right-align">
            <button type="submit" class="waves-effect waves-light btn blue darken-4" value="Fechar">Fechar</button>
        </div>
        <div class="col s2">
            <button type="submit" class="waves-effect waves-light btn blue darken-4" value="Reabrir">Reabrir</button>
        </div>
    </div>
</div>
{% endblock content %}