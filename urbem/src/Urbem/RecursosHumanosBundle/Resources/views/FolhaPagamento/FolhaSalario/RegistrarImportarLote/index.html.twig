{% extends "base.html.twig" %}
{% block content %}
<div class="container-rh">
    <div class="box-header">
        <h5 class="blue-text text-darken-4">Registrar - Importar Lote</h5>
        <div class="divider grey title-divider"><p>1</p></div>
    </div>
    
    <div class="col s3 field-filtro">
        <label class="label-rh" for="selecao-filtro">Dados do Evento</label>
        <input class="input-rh" type="text" name="selecao-filtro">
    </div>

    <div class="col s3 field-filtro">
        <label class="label-rh" for="selecao-filtro">Evento</label>
        <input class="input-rh" type="text" name="selecao-filtro">
    </div>

    <div class="col s3 field-filtro">
        <label class="label-rh" for="selecao-filtro">Texto Complementar</label>
        <input class="input-rh" type="text" name="selecao-filtro">
    </div>

    <div class="col s3 field-filtro">
        <label class="label-rh" for="selecao-filtro">Natureza</label>
        <input class="input-rh" type="text" name="selecao-filtro">
    </div>

    <div class="col s3 field-filtro">
        <label class="label-rh" for="selecao-filtro">Tipo</label>
        <input class="input-rh" type="text" name="selecao-filtro">
    </div>

    <div class="col s3 field-filtro">
        <label class="label-rh" for="tipofiltro">Lançar Somente na Aba Proporcional</label>
        <select name="tipocalculo" class="browser-default input-rh">
            <option value="" disabled>Selecione</option>
            <option value="1">Sim</option>
            <option value="0">Não</option>
        </select>
    </div>

    <div class="col s3 field-filtro">
        <label class="label-rh" for="selecao-filtro">Dados da Matrícula</label>
        <input class="input-rh" type="text" name="selecao-filtro">
    </div>

    <div class="col s3 field-filtro">
        <label class="label-rh" for="selecao-filtro">CGM</label>
        <input class="input-rh" type="text" name="selecao-filtro">
    </div>

    <div class="col s3 field-filtro">
        <label class="label-rh" for="selecao-filtro">Matricula</label>
        <input class="input-rh" type="text" name="selecao-filtro">
    </div>
    <div class="col s6 field-filtro radio-rh">
            <label class="control-label label-rh required ">Registrar</label>
            <div id="form_stDesdobramento" class="white">
                <input required="required" type="radio" value="codigo" name="order" id="lote-eventos" checked>
                <label class="required" for="lote-eventos">Lote de Eventos</label>
                <input required="required" type="radio" value="sequencia" name="order" id="lote-matriculas">
                <label class="required" for="lote-matriculas">Lote de Matriculas</label>
                <input required="required" type="radio" value="sequencia" name="order" id="importar">
                <label class="required" for="importar">Importar</label>
            </div>
    </div>
    <div class="col s12">
        <br/>
    </div>
    <div class="row">
        <div class="col s6">
            <a  class="btn-floating white-text blue darken-4" href="{{ path('folha_pagamento_folha_salario_index') }}"><i class="material-icons">arrow_back</i></a>
        </div>
        <div class="col s6 right-align">
            <button type="submit" class="waves-effect waves-light btn blue darken-4" value="Registrar"><i class="material-icons left">save</i>Registrar</button>
        </div>
    </div>
</div>
{% endblock content %}