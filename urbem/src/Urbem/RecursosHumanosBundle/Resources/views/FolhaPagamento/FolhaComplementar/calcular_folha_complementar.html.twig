{% extends "base.html.twig" %}

{% block title %}{{ wo_render_breadcrumbs({ separator: '>', viewTemplate: "WhiteOctoberBreadcrumbsBundle::titlebreadcrumbs.html.twig" }) }}{% endblock title %}


{% block menu %}
    {% include '::partials/menu.html.twig' %}
{% endblock menu %}

{% block content %}
<div class="container">
  <div class="row">
  </div>
  <div class="row">
    <div class="col s12 m12 l6">
      <label for="filtrar">Folha Complementar</label>
      <input class="input-rh" type="text" name="filtrar" placeholder="2 - Abril">
    </div>
    <div class="col s12 m12 l6">
      <label for="tipofiltro">Tipo de Filtro</label>
      <select name="tipofiltro">
        <option value="" disabled selected>Selecione</option>
