{% extends "base.html.twig" %}

{% block title %}{{ wo_render_breadcrumbs({ separator: '>', viewTemplate: "WhiteOctoberBreadcrumbsBundle::titlebreadcrumbs.html.twig" }) }}{% endblock title %}


{% block menu %}
    {% include '::partials/menu.html.twig' %}
{% endblock menu %}

{% block content %}
<div class="container">
    <div class="row">
        <form name="consultar_registro_evento_complementar">
        <div class="col s12 full-box">
            <div class="col s12">
                <h5 class="blue-text text-darken-4">Parâmetros para emissão do relatório</h5>
                <div class="col s12 m4 l4">
                    <input type="radio" name="opcoes" value="contrato" id="matricula">
                    <label for="matricula">Matrícula</label>
                </div>
                <div class="col s12 m4 l4">
                    <input type="radio" name="opcoes" value="cgm_contrato" id="cgm-matricula">
                    <label for="cgm-matricula">CGM/Matrícula</label>
                </div>
                <div class="col s12 m4 l4">
                    <input type="radio" name="opcoes" value="evento" id="evento">
                    <label for="evento">Evento</label>
                </div>
            </div>
            <!--<div class="col s6">
                <div class="col s10 m10 l10 filtro white">
                    <div class=">
                      <input id="1" placeholder="Digite..." type="text" class="validate">
                      <label for="1"></label>
                    </div>
                </div>
                <div class="col s2">
                    <a href="#" class="btn btn-fil z-depth-0 blue darken-4 white-text right-align"><i class="material-icons">search</i></a>
                </div>
            </div>-->
        </div>
        <div class="col s12">
            <h5 class="blue-text text-darken-4">Filtro por matrícula</h5>
        </div>
        <div class="col s12 m12 l4">
            <label for="matricula">CGM</label>
            <input class="input-rh" type="text" name="cgm" placeholder="5903 - ALDAIR ANTONIO SILVA">
        </div>

        <div class="col s12 m12 l4">
            <label for="matricula">Matrícula</label>
            <input class="input-rh" type="text" name="matricula" placeholder="1973">
        </div>

        <div class="col s12 m12 l4">
            <label for="matricula">Informações da Função / Motorista</label>
            <input class="input-rh" type="text" name="matricula" placeholder="17/02/2016">
        </div>

        <div class="col s12 m12 l4">
            <label for="competencia">Competência</label>
            <input class="input-rh" type="number" name="competencia" value="{{ "now"|date("Y") }}">
        </div>
        <div class="col s12 m12 l4">
            <label for="descricao">Descrição</label>
            <select name="mes">
                <option value="">Selecione</option>
                {% for mes in meses %}
                    <option value="{{ mes.codMes }}">{{ mes.descricao }}</option>
                {% endfor %}
            </select>
        </div>
        <div>
        <div class="col s12 m12 l4">
            <label for="complementar">Complementar</label>
            <select name="complementar">
                <option value="">Selecione</option>
                <option value="1">1</option>
                <option value="2">2</option>
            </select>
        </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col s6">
        <a  class="btn-floating white-text blue darken-4" href="{{ path('folha_pagamento_folha_complementar_index') }}"><i class="material-icons">arrow_back</i></a>
    </div>
    <div class="col s6 right-align">
        <button type="submit" class="waves-effect waves-light btn blue darken-4" value="Consultar"><i class="mdi mdi-file-document left"></i>Consultar</button>
    </div>
</div>


{% endblock content %}
