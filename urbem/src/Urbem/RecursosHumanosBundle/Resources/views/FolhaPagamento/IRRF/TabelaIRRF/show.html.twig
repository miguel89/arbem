{% extends "base.html.twig" %}

{% block title %}
    {{ wo_render_breadcrumbs({
        separator: '>',
        viewTemplate: "WhiteOctoberBreadcrumbsBundle::titlebreadcrumbs.html.twig"
    })
    }}
{% endblock title %}


{% block menu %}
    {% include '::partials/menu.html.twig' %}
{% endblock menu %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col m12 l10">
            <h4 class="blue-text text-darken-4 title-filtro">Folhapagamento\TabelaIrrf</h4>
        </div>
        <div class="hide-on-med-and-down col l1 right-align">
            <a class="top-btn btn waves-effect waves-light white-text blue darken-4 tooltipped" data-position="left" data-delay="50" data-tooltip="Editar" href="{{ path('folha_pagamento_irrf_tabela_edit', { 'id': tabelaIrrf.id }) }}"><i class="material-icons">edit</i></a>
        </div>
        <div class="hide-on-med-and-down col l1 left-align">
            {{ form_start(delete_form) }}
            <button class="top-btn btn waves-effect waves-light white-text blue darken-4 tooltipped" data-position="right" data-delay="50" data-tooltip="Excluir" type="submit" name="action"><i class="material-icons">delete</i></button>
            {{ form_end(delete_form) }}
        </div>  
    </div>
    <div class="row">
        <table class="striped bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tabelaIrrf.id }}</td>
            </tr>
            <tr>
                <th>Codtabela</th>
                <td>{{ tabelaIrrf.codTabela }}</td>
            </tr>
            <tr>
                <th>Cptimestamp</th>
                <td>{% if tabelaIrrf.timestamp %}{{ tabelaIrrf.timestamp|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Vldependente</th>
                <td>{{ tabelaIrrf.vlDependente }}</td>
            </tr>
            <tr>
                <th>Vllimiteisencao</th>
                <td>{{ tabelaIrrf.vlLimiteIsencao }}</td>
            </tr>
            <tr>
                <th>Vigencia</th>
                <td>{% if tabelaIrrf.vigencia %}{{ tabelaIrrf.vigencia|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col s6">
            <a  class="btn-floating white-text blue darken-4" href="{{ path('folha_pagamento_irrf_tabela_index') }}"><i class="material-icons">arrow_back</i></a>
        </div>
    </div>
</div>
{% endblock %}
