{% extends "base.html.twig" %}

{% block title %}{{ wo_render_breadcrumbs({ separator: '>', viewTemplate: "WhiteOctoberBreadcrumbsBundle::titlebreadcrumbs.html.twig" }) }}{% endblock title %}


{% block menu %}
    {% include '::partials/menu.html.twig' %}
{% endblock menu %}

{% block content %}
<div class="container">
    <div class="row">
        <form name="autorizacao-empenho">
            <div class="col s12 full-box">
                <h5 class="blue-text text-darken-4">Parâmetros de Simulação</h5>
                    <div class="col s4">
                        <h6>Valores à Reajustar</h6>
                        <div class="col s12 m4 l4">
                            <input type="radio" name="cadastro" value="f" id="f">
                            <label for="f">Ativos</label>
                        </div>
                        <div class="col s12 m4 l4">
                            <input type="radio" name="cadastro" value="d" id="d">
                            <label for="d">Aposentados</label>
                        </div>
                        <div class="col s12 m4 l4">
                            <input type="radio" name="cadastro" value="g" id="g">
                            <label for="g">Pensionistas</label>
                        </div>
                    </div>
                    <div class="col s4">
                        <h6>Valores à Reajustar</h6>
                        <div class="col s12 m4 l4">
                            <input type="radio" name="valores_reajustar" value="a" id="a">
                            <label for="a">Padrões</label>
                        </div>
                        <div class="col s12 m4 l4">
                            <input type="radio" name="valores_reajustar" value="c" id="c">
                            <label for="c">Eventos</label>
                        </div>
                    </div>
                    <div class="col s4">
                        <h6>Reajuste em Percentual/Valor</h6>
                        <div class="col s12 m4 l4">
                            <input type="radio" name="reajuste_percentual" value="m" id="m">
                            <label for="m">Padrões</label>
                        </div>
                        <div class="col s12 m4 l4">
                            <input type="radio" name="reajuste_percentual" value="v" id="v">
                            <label for="v">Eventos</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s3">
                    <label for="tipofiltro">Tipo de Filtro</label>
                    <select class="input-rh" name="tipocalculo">
                        <option value="">Selecione</option>
                        <option value="contrato">Matrícula</option>
                        <option value="cgm_contrato">CGM/Matrícula</option>
                        <option value="lotacao">Lotação</option>
                        <option value="local">Local</option>
                        <option value="atributo_servidor">Atributo Dinâmico Servidor</option>
                        <option value="atributo_pensionista">Atributo Dinâmico Pensionista</option>
                        <option value="geral">Geral</option>
                    </select>
                </div>
                <div class="col s3">
                    <label for="tipocalculo">Padrão</label>
                  <select class="input-rh" name="tipocalculo">
                      <option value="">Selecione</option>
                      {% for padrao in padroes %}
                          <option value="{{ padrao.codPadrao }}">{{ padrao.descricao }}</option>
                      {% endfor %}
                  </select>
                </div>

                <div class="col s3">
                    <label for="percentual_reajuste">Percentual do Reajuste (%)</label>
                    <input class="input-rh" type="text" name="percentual_reajuste" value="">
                </div>

                <div class="col s3">
                    <label for="faixa_valores_reajustar">Faixa de Valores à Reajustar</label>
                    <input class="input-rh" type="text" name="faixa_valores_reajustar[]" value="">
                </div>

                <div class="col s3">
                    <label for="faixa_valores_reajustar">até</label>
                    <input class="input-rh" type="text" name="faixa_valores_reajustar[]" value="">
                </div>

                <div class="col s3">
                    <label for="vigencia">Vigência</label>
                    <input class="input-rh" type="text" name="vigencia" class="datepicker" value="">
                </div>

                <div class="col s3">
                    <label for="tiponormas">Tipo de Normas</label>
                    <select class="input-rh" name="tiponormas">
                        <option value="">Selecione</option>
                        {% for norma in normas %}
                        <option value="{{ norma.codNorma }}">{{ norma.nomNorma }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="col s3">
                    <label for="normas">Normas</label>
                    <select class="input-rh" name="normas">
                        <option value="">Selecione</option>
                    </select>
                </div>
                <div class="col s12">
                    <label for="observacoes_assentamento">Observações para Assentamento</label>
                    <textarea name="observacoes_assentamento"class="materialize-textarea"></textarea>
                </div>
            </div>

            <div class="col s12 m10 l12">
                <button type="button" class="waves-effect waves-light btn blue darken-4 right" value="Simular"><i class="mdi mdi-calculator left"></i>Calcular</button>
            </div>
        </form>
    </div>
</div>
{% endblock content %}
