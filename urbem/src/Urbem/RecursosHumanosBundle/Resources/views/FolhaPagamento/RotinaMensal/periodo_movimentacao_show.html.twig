{% extends "base.html.twig" %}

{% block title %}{{ wo_render_breadcrumbs({ separator: '>', viewTemplate: "WhiteOctoberBreadcrumbsBundle::titlebreadcrumbs.html.twig" }) }}{% endblock title %}


{% block menu %}
    {% include '::partials/menu.html.twig' %}
{% endblock menu %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col m12 l10">
            <h4 class="blue-text text-darken-4 title-filtro">{{ folhapagamento.codPeriodoMovimentacao }}</h4>
        </div>
        <div class="hide-on-med-and-down col l1 right-align">
            <a class="top-btn btn waves-effect waves-light white-text blue darken-4 tooltipped" data-position="left" data-delay="50" data-tooltip="Editar" href="{{ path('folha_pagamento_rotina_mensal_periodo_movimentacao_edit', { 'id': folhapagamento.codPeriodoMovimentacao }) }}"><i class="material-icons">edit</i></a>
        </div>
        <div class="hide-on-med-and-down col l1 left-align">
            {{ form_start(delete_form) }}
            <button class="top-btn btn waves-effect waves-light white-text blue darken-4 tooltipped" data-position="right" data-delay="50" data-tooltip="Excluir" value="Delete" type="submit" name="action"><i class="material-icons">delete</i></button>
            {{ form_end(delete_form) }}
        </div>  
    </div>
    <div class="row">
    <table class="highlight bordered">
        <tbody>
            <tr>
                <th>Codperiodomovimentacao</th>
                <td>{{ folhapagamento.codPeriodoMovimentacao }}</td>
            </tr>
            <tr>
                <th>Dtinicial</th>
                <td>{% if folhapagamento.dtInicial %}{{ folhapagamento.dtInicial|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Dtfinal</th>
                <td>{% if folhapagamento.dtFinal %}{{ folhapagamento.dtFinal|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    </div>
    <div class="row">
        <div class="col s6">
            <a class="btn-floating white-text blue darken-4" href="{{ path('folha_pagamento_rotina_mensal_periodo_movimentacao_index') }}"><i class="material-icons">arrow_back</i></a>
        </div>
    </div>
</div>
{% endblock content %}
