{% extends "base.html.twig" %}
{% block content %}
    <div class="col s12">
        <div class="row title-edit">
        <h5>Incluir Base</h5>
        <div class="divider grey title-divider"><p>1</p></div>
        </div>
    </div>
    <div class="row">
        {{ form_start(form) }}
        <div class="col s3 field-filtro select-filtro">
            {{ form_label(form.nomBase, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.nomBase, {'attr': {'class': 'white input-rh browser-default'}}) }}
            {{ form_errors(form.nomBase) }}
        </div>
        <div class="col s3 field-filtro select-filtro">
            {{ form_label(form.tipoBase, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.tipoBase, {'attr': {'class': 'white input-rh browser-default'}}) }}
            {{ form_errors(form.tipoBase) }}
        </div>
        <div class="col s3 field-filtro select-filtro">
            {{ form_label(form.codModulo, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.codModulo, {'attr': {'class': 'white input-rh browser-default'}}) }}
            {{ form_errors(form.codModulo) }}
        </div>
        <div class="col s3 field-filtro select-filtro">
            {{ form_label(form.codBiblioteca, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.codBiblioteca, {'attr': {'class': 'white input-rh browser-default'}}) }}
            {{ form_errors(form.codBiblioteca) }}
        </div>
        <div class="col s3 field-filtro select-filtro">
            {{ form_label(form.codFuncao, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.codFuncao, {'attr': {'class': 'white input-rh browser-default'}}) }}
            {{ form_errors(form.codFuncao) }}
        </div>
        <div class="col s3 field-filtro select-filtro">
            {{ form_label(form.codEvento, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.codEvento, {'attr': {'class': 'white basic-multiple form-control'}}) }}
            {{ form_errors(form.codEvento) }}
        </div>
        <div class="col s3 field-filtro select-filtro">
            {{ form_label(form.apresentacaoValor, null, {'label_attr': {'class': 'control-label labelCheck-rh'}}) }}
            {{ form_widget(form.apresentacaoValor, {'attr': {'class': 'white iCheck-helper browser-default icheckBox'}}) }}
            {{ form_errors(form.apresentacaoValor) }}
        </div>
        <div class="col s3 field-filtro select-filtro">
            {{ form_label(form.insercaoAutomatica, null, {'label_attr': {'class': 'control-label labelCheck-rh'}}) }}
            {{ form_widget(form.insercaoAutomatica, {'attr': {'class': 'white iCheck-helper browser-default icheckBox'}}) }}
            {{ form_errors(form.insercaoAutomatica) }}
        </div>
        {{ form_widget(form) }}
    </div>
    <div class="row">
        <div class="col s6">
            <a class="btn-floating white-text blue darken-4" href="{{ path('folha_pagamento_bases_index') }}"><i class="material-icons">arrow_back</i></a>
        </div>
        <div class="col s6 right-align">
            <button type="submit" class="waves-effect waves-light btn blue darken-4" value="Salvar"><i class="material-icons left">save</i> Salvar</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock content %}

