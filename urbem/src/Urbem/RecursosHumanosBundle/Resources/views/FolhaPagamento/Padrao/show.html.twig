{% extends "::base.html.twig" %}
{% block content %}
<div class="box box-primary">
    <div class="box-header col s12">
    <div class="col s10 box-title left-align show">
        <h2>Padrão</h2>
    </div>
    <div class="col s2">
        <div class="hide-on-med-and-down col l9 right-align">
            <a class="btn waves-effect waves-light white-text blue darken-4 tooltipped" data-position="left" data-delay="50" data-tooltip="Editar" href="{{ path('folha_pagamento_padrao_edit', { 'id': padrao.codPadrao }) }}"><i class="material-icons">edit</i></a>
        </div>
        <div class="hide-on-med-and-down col l3 right-align">
            {{ form_start(delete_form) }}
            <button class="btn waves-effect waves-light white-text blue darken-4 tooltipped" data-position="right" data-delay="50" data-tooltip="Excluir" value="Delete" type="submit" name="action"><i class="material-icons">delete</i></button>
            {{ form_end(delete_form) }}
        </div>
    </div>
    <div class="box-body  no-padding">
    <table class="bordered show-table">
        <tbody>
            <tr class="sonata-ba-view-container">
                <th>Cód. padrão</th>
                <td>{{ padrao.codPadrao }}</td>
            </tr>
            <tr>
                <th>Descrição</th>
                <td>{{ padrao.descricao }}</td>
            </tr>
            <tr>
                <th>Horas Mensais</th>
                <td>{{ padrao.horasMensais }}</td>
            </tr>
            <tr>
                <th>Horas Semanais</th>
                <td>{{ padrao.horasSemanais }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ padrao.codPadraoPadrao.valor|number_format(2, ',', '.') }} </td>
            </tr>
        </tbody>
    </table>
    </div>
    <div class="col s12">
        <a  class="btn-floating white-text blue darken-4" href="{{ path('folha_pagamento_padrao_index') }}"><i class="material-icons">arrow_back</i></a>
    </div>
</div>
{% endblock content %}
