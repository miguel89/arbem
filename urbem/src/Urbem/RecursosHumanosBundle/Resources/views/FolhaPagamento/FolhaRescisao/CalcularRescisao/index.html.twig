{% extends "base.html.twig" %}

{% block title %}FolhaPagamento\FolhaFerias {% endblock title %}


{% block menu %}
    {% include '::partials/menu.html.twig' %}
{% endblock menu %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col s12 m12 l12">
                <h5 class="blue-text text-darken-4 title-filtro">Calcular Férias</h5>
            </div>
            <div class="input-field col s12 m12 l6">
                <input type="text" name="selecao-filtro">
                <label for="selecao-filtro">Seleção do Filtro</label>
            </div>

            <div class="input-field col s12 m12 l6">
                <input type="text" name="filtrar">
                <label for="filtrar">Filtrar</label>
            </div>

            <div class="input-field col s12 m12 l6">
                <select name="matricula">
                    <option value="" selected>Selecione</option>
                    <option value="0">Matricula</option>
                    <option value="1">CGM/Matricula</option>
                    <option value="2">Cargo</option>
                    <option value="3">Função</option>
                    <option value="4">Padrão</option>
                    <option value="5">Lotação</option>
                    <option value="6">Local</option>
                </select>
                <label for="matricula">Matrícula</label>
            </div>

            <div class="input-field col s6 m8 l10">
                <input class="waves-effect waves-light btn blue darken-4 right" type="button" value="OK" disabled="disabled">
            </div>

            <div class="input-field col s6 m4 l2">
                <input class="waves-effect waves-light btn blue darken-4 right" type="button" value="Limpar" disabled="disabled">
            </div>
        </div>
{% endblock content %}
