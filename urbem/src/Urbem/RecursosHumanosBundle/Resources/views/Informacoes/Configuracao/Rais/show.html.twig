{% extends "base.html.twig" %}
{% block content %}
<div class="container-rh">
    <div class="box-header col s12">
    <div class="col s10 box-title left-align show">
        <h2>{{ 'label.configuracaoRais.modulo'|trans }}</h2>
    </div>
    <div class="col s2">
        <div class="hide-on-med-and-down col l9 right-align">
            <a class="top-btn btn waves-effect waves-light white-text blue darken-4 tooltipped" data-position="left" data-delay="50" data-tooltip="Editar" href="{{ path('informacoes_configuracao_rais_edit', { 'id': configuracao.exercicio }) }}"><i class="material-icons">edit</i></a>
        </div>
        <div class="hide-on-med-and-down col l3 right-align">
            {{ form_start(delete_form) }}
            <button class="top-btn btn waves-effect waves-light white-text blue darken-4 tooltipped" data-position="right" data-delay="50" data-tooltip="Excluir" value="Delete" type="submit" name="action"><i class="material-icons">delete</i></button>
            {{ form_end(delete_form) }}
        </div>
    </div>
</div>
    <div class="box-body  no-padding">
        <table class="bordered show-table">
            <tbody>
                <tr class="sonata-ba-view-container">
                    <th>Exercicio</th>
                    <td>{{ configuracao.exercicio }}</td>
                </tr>
                <tr>
                    <th>Numcgm</th>
                    <td>{{ configuracao.numcgm }}</td>
                </tr>
                <tr>
                    <th>Tipoinscricao</th>
                    <td>{{ configuracao.tipoInscricao }}</td>
                </tr>
                <tr>
                    <th>Telefone</th>
                    <td>{{ configuracao.telefone }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ configuracao.email }}</td>
                </tr>
                <tr>
                    <th>Naturezajuridica</th>
                    <td>{{ configuracao.naturezaJuridica }}</td>
                </tr>
                <tr>
                    <th>Codmunicipio</th>
                    <td>{{ configuracao.codMunicipio }}</td>
                </tr>
                <tr>
                    <th>Dtbasecategoria</th>
                    <td>{{ configuracao.dtBaseCategoria }}</td>
                </tr>
                <tr>
                    <th>Ceivinculado</th>
                    <td>{% if configuracao.ceiVinculado %}Yes{% else %}No{% endif %}</td>
                </tr>
                <tr>
                    <th>Prefixo</th>
                    <td>{{ configuracao.prefixo }}</td>
                </tr>
                <tr>
                    <th>Numerocei</th>
                    <td>{{ configuracao.numeroCei }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="row">
        <a  class="btn-floating white-text blue darken-4" href="{{ path('informacoes_configuracao_rais_index') }}"><i class="material-icons">arrow_back</i></a>
    </div>
</div>
{% endblock %}
