            {{ form_errors(edit_form.numOrgaoBanpara) }}
        </div>
        <div class="col s3 field-filtro select-filtro">
            {{ form_label(edit_form.vigencia, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(edit_form.vigencia, {'attr': {'class': 'white input-rh browser-default'}}) }}
