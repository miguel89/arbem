{% extends "base.html.twig" %}
{% block content %}
<div class="container-rh">
    <div class="row">
        <div class="col s12">
            <h5 class="blue-text text-darken-4">{{ 'label.configuracaoPasep.modulo'|trans }}</h5>
            <div class="divider grey title-divider"><p>1</p></div>
        </div>
    </div>
    <div class="row">
    {{ form_start(form) }}
        <div class="col s3 field-filtro select-filtro">
