{% extends "base.html.twig" %}
{% block content %}
<div class="container-rh">
    <div class="col s12 title-edit box-title-rh">
        <h5>{{ 'label.gerarArquivo'|trans }}</h5>
        <div class="divider grey title-divider"><p>1</p></div>
    </div>
    <div class="row">
        {{ form_start(form) }}
        <div class="col s4 field-filtro select-filtro">
            {{ form_label(form.stTipoFiltro, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.stTipoFiltro, {'attr': {'class': 'white input-rh browser-default'}}) }}
            {{ form_errors(form.stTipoFiltro) }}
        </div>
        <div class="col s4 field-filtro select-filtro">
            {{ form_label(form.dtGeracaoArquivo, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.dtGeracaoArquivo, {'attr': {'class': 'white input-rh browser-default'}}) }}
            {{ form_errors(form.dtGeracaoArquivo) }}
        </div>
        <div class="col s4 field-filtro select-filtro">
            {{ form_label(form.dtCredito, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.dtCredito, {'attr': {'class': 'white input-rh browser-default'}}) }}
            {{ form_errors(form.dtCredito) }}
        </div>
        <div class="col s6 field-filtro select-filtro">
            {{ form_label(form.inEtapaProcessamento, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.inEtapaProcessamento, {'attr': {'class': 'white browser-default'}}) }}
            {{ form_errors(form.inEtapaProcessamento) }}
        </div>
        
        <div class="col s12 right-align">
            <button type="submit" id="form_gerar" name="form[gerar]" class="save waves-effect waves-light btn blue darken-4"><i class="material-icons left">print</i>Gerar</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock content %}
