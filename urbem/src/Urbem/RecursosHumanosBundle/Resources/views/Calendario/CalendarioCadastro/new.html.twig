{% extends "base.html.twig" %}

{% block title %}{{ wo_render_breadcrumbs({ separator: '>', viewTemplate: "WhiteOctoberBreadcrumbsBundle::titlebreadcrumbs.html.twig" }) }}{% endblock title %}


{% block menu %}
    {% include '::partials/menu.html.twig' %}
{% endblock menu %}

{% block content %}
<div class="container-rh">
        <div class="row title-edit">
            <h5 class="col s12 box-title-rh">Incluir Calend√°rio</h5>
            <div class="divider grey title-divider"><p>1</p></div>
        </div>
    <div class="row">
        {{ form_start(form) }}
        <div class="col s3 field-filtro select-filtro">
            {{ form_label(form.descricao, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
