{% extends "base.html.twig" %}
{% block content %}
<div class="box box-primary">
    <div class="box-header col s12">
    <div class="col s10 box-title left-align show">
        <h2>Feriado</h2>
    </div>
    <div class="col s2">
        <div class="hide-on-med-and-down col l9 right-align">
            <a class="top-btn btn waves-effect waves-light white-text blue darken-4 tooltipped" data-position="left" data-delay="50" data-tooltip="Editar" href="{{ path('calendario_feriado_edit', { 'id': feriado.codFeriado }) }}"><i class="material-icons">edit</i></a>
        </div>
        <div class="hide-on-med-and-down col l3 right-align">
            {{ form_start(delete_form) }}
            <button class="top-btn btn waves-effect waves-light white-text blue darken-4 tooltipped" data-position="right" data-delay="50" data-tooltip="Excluir" value="Delete" type="submit" name="action"><i class="material-icons">delete</i></button>
            {{ form_end(delete_form) }}
        </div>
    </div>
</div>
    <div class="box-body  no-padding">
        <table class="bordered show-table">
            <tbody>
                <tr class="sonata-ba-view-container">
                    <th>{{ 'label.codigo'|trans }}</th>
                    <td>{{ feriado.codFeriado }}</td>
                </tr>
                <tr>
                    <th class="right-rh">{{ 'label.calendario_feriado.dtFeriado'|trans }}</th>
                    <td>{% if feriado.dtFeriado %}{{ feriado.dtFeriado|date('d/m/Y') }}{% endif %}</td>
                </tr>
                <tr>
                    <th class="right-rh">{{ 'label.descricao'|trans }}</th>
                    <td>{{ feriado.descricao }}</td>
                </tr>
                <tr>
                    <th class="right-rh">{{ 'label.calendario_ponto_facultativo.tipoFeriado'|trans }}</th>
                    <td>{{ tipo[feriado.tipoferiado] }}</td>
                </tr>
                <tr>
                    <th class="right-rh">{{ 'label.calendario_feriado.abrangencia'|trans }}</th>
                    <td>{{ abrangencia[feriado.abrangencia] }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col s12 marg">
        <a  class="btn-floating white-text blue darken-4" href="{{ path('calendario_feriado_index') }}"><i class="material-icons">arrow_back</i></a>
    </div>
</div>
{% endblock content %}
