{% extends "base.html.twig" %}
{% block content %}
<div class="container-rh">
    <div class="col s12 title-edit box-title-rh">
        <h5 class="col s12 box-title-rh">{{ 'incluir'|trans }} {{ 'feriado'|trans }}</h5>
        <div class="divider grey title-divider"><p>1</p></div>
    </div>
    <div class="row">
        {{ form_start(form) }}
        <div class="col s3 field-filtro select-filtro">
            {{ form_label(form.dtFeriado, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.dtFeriado, {'attr': {'class': 'white input-rh browser-default'}}) }}
            {{ form_errors(form.dtFeriado) }}
        </div>
        <div class="col s3 field-filtro select-filtro">
            {{ form_label(form.descricao, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.descricao, {'attr': {'class': 'white input-rh'}}) }}
            {{ form_errors(form.descricao) }}
        </div>
        <div class="col s6 field-filtro perce-rh">
            {{ form_label(form.tipoferiado, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.tipoferiado) }}
            {{ form_errors(form.tipoferiado) }}
        </div>
        <div class="col s6 field-filtro ">
            {{ form_label(form.abrangencia, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
            {{ form_widget(form.abrangencia) }}
            {{ form_errors(form.abrangencia) }}
        </div>

    </div>
    <div class="row">
        <div class="col s6">
            <a class="btn-floating white-text blue darken-4" href="{{ path('calendario_feriado_index') }}"><i class="material-icons">arrow_back</i></a>
        </div>
        <div class="col s6 right-align">
            <button type="submit" class="waves-effect waves-light btn blue darken-4" value="Salvar"><i class="material-icons left">save</i> Salvar</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock content %}
