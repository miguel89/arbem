{% extends "base.html.twig" %}
{% block content %}
<div class="container-rh">
    <div class="row title-index filtro filtro-sonata z-depth-0 filtro-rh">
        <div class="col s3 field-filtro">
              <label for="1" class="control-label label-rh">Feriados</label>
            <div>
                <input id="1" type="text" class="input-rh">
            </div>
        </div>
        <div class="col s1 busca-rh">
            <div class="buscar center">
                <button type="submit" class="hide-on-med-and-down btn waves-effect waves-light blue-darken-4">
                    <i class="material-icons">search</i> 
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        <a class="left hide-on-med-and-down waves-effect waves-light btn blue darken-4 add-rh" href="{{ path('calendario_feriado_new') }}"><i class="material-icons left icon-rh">add</i>Incluir</a>
    </div>
    <div class="row">
        <table class="bordered highlight">
            <thead class="thead-rh">
                <tr class="sonata-ba-list-field-header">
                    <th class="th-rh">{{ 'label.codigo'|trans }}</th>
                    <th class="th-rh">{{ 'label.calendario_feriado.dtFeriado'|trans }}</th>
                    <th class="th-rh">{{ 'label.descricao'|trans }}</th>
                    <th class="th-rh">{{ 'label.calendario_ponto_facultativo.tipoFeriado'|trans }}</th>
                    <th class="th-rh">{{ 'label.calendario_feriado.abrangencia'|trans }}</th>
                    <th class="th-rh">Action</th>
                </tr>
            </thead>
            <tbody>
            {% for feriado in feriados %}
                <tr>
                    <td class="td-rh center"><a class="blue-text text-darken-4" href="{{ path('calendario_feriado_show', { 'id': feriado.codFeriado }) }}">{{ feriado.codFeriado }}</a></td>
                    <td class="td-rh center">{% if feriado.dtFeriado %}{{ feriado.dtFeriado|date('d/m/Y') }}{% endif %}</td>
                    <td class="td-rh">{{ feriado.descricao }}</td>
                    <td class="td-rh">{{ tipo[feriado.tipoferiado] }}</td>
                    <td class="td-rh center">{{ abrangencia[feriado.abrangencia] }}</td>
                    <td class="td-rh" objectid="1">
                        <div class="btn-group">
                            <a href="{{ path('calendario_feriado_show', { 'id': feriado.codFeriado }) }}" data-position="left" data-delay="50" data-tooltip="Detalhe" class="btn btn-delete-sonata blue-text text-darken-4 transparent z-depth-0 hide-on-med-and-down tooltipped" data-tooltip-id="d5c891dc-189c-f92e-efa7-e36184b2038c">
                                <i class="fa fa-search-plus"></i>
                            </a>
                            <a href="{{ path('calendario_feriado_edit', { 'id': feriado.codFeriado }) }}" data-position="left" data-delay="50" data-tooltip="Editar" class="btn btn-delete-sonata blue-text text-darken-4 transparent z-depth-0 hide-on-med-and-down tooltipped" data-tooltip-id="d5c891dc-189c-f92e-efa7-e36184b2038c">
                                <i class="material-icons">edit</i>
                            </a>
                            <button type="submit" class="btn btn-delete-sonata blue-text text-darken-4 transparent z-depth-0 hide-on-med-and-down tooltipped" data-position="right" data-delay="50" data-tooltip="Excluir" data-tooltip-id="3fac1630-635c-78bc-454d-e0e8301e2298">
                                <i class="material-icons">delete</i>
                            </button>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="center">
            {{ knp_pagination_render(feriados) }}
        </div>
    </div>
</div>
  {% block javascript %}
      {{ parent() }}

      <script type="text/javascript" src="{{ asset('/bundles/core/javascripts/urbem.js') }}"></script>
  {% endblock javascript %}
{% endblock content %}
