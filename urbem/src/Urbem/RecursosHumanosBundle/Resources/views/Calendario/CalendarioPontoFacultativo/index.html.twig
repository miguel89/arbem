{% extends "base.html.twig" %}

{% block title %}{{ wo_render_breadcrumbs({ separator: '>', viewTemplate: "WhiteOctoberBreadcrumbsBundle::titlebreadcrumbs.html.twig" }) }}{% endblock title %}


{% block menu %}
    {% include '::partials/menu.html.twig' %}
{% endblock menu %}

{% block content %}
<div class="container-rh">
<div class="row">
    <div class="col s12">
        <h5 class="blue-text text-darken-4 title-filtro">Calendario\CalendarioPontoFacultativo list</h5>
    </div>
    <div class="col s8 filtro">
        <div class="input-field">
          <input id="1" placeholder="Digite..." type="text" class="validate">
          <label for="1"></label>
        </div>
    </div>
    <div class="col s2">
        <a href="#" class="btn btn-fil z-depth-0 blue darken-4 white-text right-align"><i class="material-icons">search</i></a>
    </div>
    <div class="col s2 right-align">
        <a href="{{ path('calendario_calendario_ponto_facultativo_new') }}" class="btn-large btn-floating waves-effect waves-light blue darken-4 tooltipped" data-position="bottom" data-delay="50" data-tooltip="Incluir Ponto Facultativo"><i class="material-icons">add</i></a>
    </div>
</div>
<div class="row">
    <table class="highlight bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for calendario in calendarios %}
        <tr>
            <td><a class="blue-text text-darken-4" href="{{ path('calendario_calendario_ponto_facultativo_show', { 'id': calendario.id }) }}">{{ calendario.id }}</a></td>
            <td><a href="{{ path('calendario_calendario_ponto_facultativo_edit', { 'id': calendario.id }) }}" class="tooltipped" data-position="left" data-delay="50" data-tooltip="Editar Ponto Facultativo"><i class="material-icons blue-text text-darken-4">edit</i></a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="center">
        {{ knp_pagination_render(calendarios) }}
    </div>
{% endblock content %}
