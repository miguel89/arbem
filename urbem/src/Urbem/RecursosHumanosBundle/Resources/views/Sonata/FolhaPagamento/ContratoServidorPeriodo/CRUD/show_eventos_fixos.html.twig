<div class="row">
    <div class="col s11 servidor-table">
        <a class="btn-lg tooltipped"
           data-position="left"
           data-delay="50"
           data-tooltip="Incluir">
            <i class="fa fa-cubes left"></i>
            {{ 'label.recursosHumanos.contratoServidorPeriodo.eventosFixosCadastrados'|trans }}
        </a>
    </div>
    <div class="col s1">
        <a href="{{ path('urbem_recursos_humanos_folha_pagamento_registro_evento_create',{'id': object|objectKey }) }}"
           class="btn-lg"><i class="mdi mdi-plus-circle "></i></a>
    </div>

    <table class="col s12 highlight bordered">
        <thead class="thead-rh">
        <tr class="sonata-ba-list-field-header">
            <th class="th-rh">#</th>
            <th class="th-rh">{{ 'label.recursosHumanos.contratoServidorPeriodo.codigo'|trans }}</th>
            <th class="th-rh">{{ 'label.recursosHumanos.contratoServidorPeriodo.evento'|trans }}</th>
            <th class="th-rh">{{ 'label.recursosHumanos.contratoServidorPeriodo.valor'|trans }}</th>
            <th class="th-rh">{{ 'label.recursosHumanos.contratoServidorPeriodo.quantidade'|trans }}</th>
            <th class="th-rh">{{ 'label.recursosHumanos.contratoServidorPeriodo.automatico'|trans }}</th>
            <th class="th-rh" width="10%">{{ 'acoes'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for fixo in object.eventosFixos %}
            <tr>
                <td class="td-rh">{{ loop.index }}</td>
                <td class="td-rh">{{ fixo.codigo }}</td>
                <td class="td-rh">{{ fixo.descricao }}</td>
                <td class="td-rh">{{ fixo.valor|number_format(2, ',', '.') }}</td>
                <td class="td-rh">{{ fixo.quantidade|number_format(2, ',', '.') }}</td>
                <td class="td-rh">{{ fixo.automatico ? 'Sim' : 'NÃ£o' }}</td>
                <td class="td-rh">
                    <div class="btn-group">
                        <a class="hide-on-med-and-down blue-text text-darken-4 tooltipped left"
                           data-position="left"
                           data-delay="50"
                           data-tooltip="Excluir"
                           href="{{ path('urbem_recursos_humanos_folha_pagamento_registro_evento_edit', { 'id': fixo.cod_registro~'~'~fixo.timestamp~'~'~fixo.cod_evento }) }}">
                            <i class="material-icons">edit</i>
                        </a>
                        <a class="hide-on-med-and-down blue-text text-darken-4 tooltipped right"
                           data-position="left"
                           data-delay="50"
                           data-tooltip="Excluir"
                           href="{{ path('urbem_recursos_humanos_folha_pagamento_registro_evento_delete', { 'id': fixo.cod_registro~'~'~fixo.timestamp~'~'~fixo.cod_evento }) }}">
                            <i class="material-icons">delete</i>
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
