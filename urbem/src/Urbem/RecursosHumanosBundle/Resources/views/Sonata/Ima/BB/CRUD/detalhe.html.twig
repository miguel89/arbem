{% extends "CoreBundle::Sonata/standard_layout.html.twig" %}

{% import 'CoreBundle:Sonata/CRUD:base_show_macro.html.twig' as show_helper %}

{% block content %}
    <div class="container-rh">
        <div class="row">
            <div class="col s12 profile-box">
                <h2 class="blue-text text-darken-4 left" style="margin: 1.78rem 0 0 0">
                    <i class="fa fa-shopping-cart fa-lg" aria-hidden="true"></i>
                    <span class="grey-text bold" style="padding-top: 10px; font-weight: bold">
                    Resumo Remessa Banco do Brasil
                </span>
                </h2>

                <h6 class="divider grey col s12"></h6>

                <div class="col s6 little-box">
                    <h6 class="col s12 blue-text text-darken-4 profile-titles">
                        Competência
                    </h6>
                    <h6 class="col s12 grey-text text-darken-1">
                        {{ object.stCompetenciaTitulo }}
                    </h6>
                </div>
                <div class="col s6 little-box">
                    <h6 class="col s12 blue-text text-darken-4 profile-titles">
                        Cadastro
                    </h6>
                    <h6 class="col s12 grey-text text-darken-1">
                        {{ object.stSituacaoCadastro|capitalize }}
                    </h6>
                </div>

                <div class="col s6 little-box">
                    <h6 class="col s12 blue-text text-darken-4 profile-titles">
                        Data da Geração do Arquivo
                    </h6>
                    <h6 class="col s12 grey-text text-darken-1">
                        {{ object.dataGeracao }}
                    </h6>
                </div>

                <div class="col s6 little-box">
                    <h6 class="col s12 blue-text text-darken-4 profile-titles">
                        Data do Pagamento
                    </h6>
                    <h6 class="col s12 grey-text text-darken-1">
                        {{ object.dataPagamento }}
                    </h6>
                </div>
                <div class="col s12 initial">
                    <a href="{{ path('urbem_recursos_humanos_ima_configuracao_exportar_ipers_download', {'id':object.hash}) }}"
                       class="btn white-text blue darken-4 btn-success">
                        <i class="material-icons">receipt</i>
                        Download
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col s12 servidor-table">
                <a class="btn-lg tooltipped"
                   data-position="left"
                   data-delay="50">
                    <i class="fa fa-file-zip-o left"></i>
                    {{ 'label.recursosHumanos.folhas.consultarFichaFinanceira.registros'|trans }}
                </a>
            </div>

            <table class="col s12 highlight bordered">
                <thead class="thead-rh">
                <tr class="sonata-ba-list-field-header">
                    <th class="th-rh">{{ 'label.recursosHumanos.folhas.consultarFichaFinanceira.arquivoGerado'|trans }}</th>
                    <th class="th-rh">{{ 'label.recursosHumanos.folhas.consultarFichaFinanceira.seq'|trans }}</th>
                    <th class="th-rh">{{ 'label.recursosHumanos.folhas.consultarFichaFinanceira.descricao'|trans }}</th>
                    <th class="th-rh">{{ 'label.recursosHumanos.folhas.consultarFichaFinanceira.qtdRegistros'|trans }}</th>
                    <th class="th-rh">{{ 'label.recursosHumanos.folhas.consultarFichaFinanceira.totalArquivo'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for conta in object.dadosExtra %}
                    <tr>
                        <td class="td-rh">{{ conta.nomeArquivo }}</td>
                        <td class="td-rh">{{ conta.seq }}</td>
                        <td class="td-rh">{{ conta.descricao }}</td>
                        <td class="td-rh">{{ conta.qtd }}</td>
                        <td class="td-rh">{{ conta.total|number_format_decimal({'fraction_digits': 2}) }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


        <div class="sonata-ba-form-actions well well-small form-actions row">
            <div class="col s8 initial">
                <a href="{{ path('informacoes_configuracao_home') }}"
                   class="back btn-floating white-text blue darken-4 btn-success">
                    <i class="material-icons">arrow_back</i>
                    Add a comment to this line
                </a>
            </div>
        </div>
    </div>
{% endblock content %}
