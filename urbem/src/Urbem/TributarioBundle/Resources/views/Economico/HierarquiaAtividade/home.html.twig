{% extends "base_home_cards.html.twig" %}
{% block content %}
<div class="container">
    <h4 class="blue-text text-darken-4">Hierarquia de Atividade</h4>

    <div class="divider grey title-divider"><p>1</p></div>

    <div class="col s6 m6 l3">
        <div class="card-panel col s12 hoverable center">
            <a href="{{ path('urbem_tributario_economico_vigencia_atividade_list') }}">
                <h6><i class="mdi mdi-calendar-clock large"></i></h6>
                <h6 class="truncate center">{{ 'label.economicoVigenciaAtividade.modulo'|trans }}</h6>
            </a>
            <div class="divider col s12"></div>
            <h5 class="left">
                <a href="{{ path('urbem_tributario_economico_vigencia_atividade_list') }}" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Pesquisar">
                    <i class="material-icons">search</i>
                </a>
            </h5>
            <h5 class="right">
                <a href="{{ path('urbem_tributario_economico_vigencia_atividade_create') }}" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Incluir">
                    <i class="material-icons">add_circle</i>
                </a>
            </h5>
        </div>
    </div>

    <div class="col s6 m6 l3">
        <div class="card-panel col s12 hoverable center">
            <a href="{{ path('tributario_economico_hierarquia_atividade_nivel_filtro') }}">
                <h6><i class="mdi mdi-elevation-rise large"></i></h6>
                <h6 class="truncate center">{{ 'label.economicoNivelAtividade.modulo'|trans }}</h6>
            </a>
            <div class="divider col s12"></div>
            <h5 class="left">
                <a href="{{ path('tributario_economico_hierarquia_atividade_nivel_filtro') }}" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Pesquisar">
                    <i class="material-icons">search</i>
                </a>
            </h5>
        </div>
    </div>
</div>
{% endblock content %}
