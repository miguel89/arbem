{% extends "base.html.twig" %}
{% block content %}
<div class="sonata-ba-show col s12">
    <div class="sonata-ba-view">
        <div class="row">
            <h5 class="col s10 box-title left-align ">{{ 'label.configuracaoImobiliaria.dados'|trans }}</h5>
            <div class="divider grey lighten-1  title-divider"></div>
            {{ form_start(form) }}
                <div class="col s3">
                    {{ form_label(form.codigo_localizacao, null, {'label_attr': {'class': 'label-rh required'}}) }}
                    {{ form_widget(form.codigo_localizacao, {'attr': {'class': 'form-control white basic-multiple select2-parameters'}}) }}
                    {{ form_errors(form.codigo_localizacao) }}
                </div>
                <div class="col s3">
                    {{ form_label(form.mascara_lote, null, {'label_attr': {'class': 'label-rh'}}) }}
                    {{ form_widget(form.mascara_lote, {'attr': {'class': 'input-rh white browser-default'}}) }}
                    {{ form_errors(form.mascara_lote) }}
                </div>
                <div class="col s3">
                    {{ form_label(form.numero_inscricao, null, {'label_attr': {'class': 'label-rh'}}) }}
                    {{ form_widget(form.numero_inscricao, {'attr': {'class': 'form-control white basic-multiple select2-parameters'}}) }}
                    {{ form_errors(form.numero_inscricao) }}
                </div>
                <div class="col s3">
                    {{ form_label(form.mascara_inscricao, null, {'label_attr': {'class': 'label-rh'}}) }}
                    {{ form_widget(form.mascara_inscricao,{'attr': {'class': 'input-rh white browser-default'}}) }}
                    {{ form_errors(form.mascara_inscricao) }}
                </div>
                <div class="col s3">
                    {{ form_label(form.ordem_entrega, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
                    {{ form_widget(form.ordem_entrega, {'attr': {'class': 'form-control white basic-multiple select2-parameters'}}) }}
                    {{ form_errors(form.ordem_entrega) }}
                </div>
                <div class="col s3">
                    {{ form_label(form.navegacao_automatica, null, {'label_attr': {'class': 'label-rh'}}) }}
                    {{ form_widget(form.navegacao_automatica, {'attr': {'class': 'form-control white basic-multiple select2-parameters'}}) }}
                    {{ form_errors(form.navegacao_automatica) }}
                </div>
                <div class="col s3">
                    {{ form_label(form.valor_md, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
                    {{ form_widget(form.valor_md, {'attr': {'class': 'form-control white basic-multiple select2-parameters'}}) }}
                    {{ form_errors(form.valor_md) }}
                </div>
                <div class="col s3">
                    {{ form_label(form.aliquotas, null, {'label_attr': {'class': '  '}}) }}
