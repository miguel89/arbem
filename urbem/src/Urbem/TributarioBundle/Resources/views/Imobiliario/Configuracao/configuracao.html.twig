                    {{ form_errors(form.aliquotas) }}
                </div>
                <div class="col s3">
                    {{ form_label(form.atrib_lote_urbano, null, {'label_attr': {'class': '  '}}) }}
                    {{ form_widget(form.atrib_lote_urbano, {'attr': {'class': 'form-control white basic-multiple select2-parameters'}}) }}
                    {{ form_errors(form.atrib_lote_urbano) }}
                </div>
                <div class="col s3">
                    {{ form_label(form.atrib_lote_rural, null, {'label_attr': {'class': '  '}}) }}
                    {{ form_widget(form.atrib_lote_rural, {'attr': {'class': 'form-control white basic-multiple select2-parameters'}}) }}
                    {{ form_errors(form.atrib_lote_rural) }}
                </div>
                <div class="col s3">
                    {{ form_label(form.atrib_imovel, null, {'label_attr': {'class': '  '}}) }}
                    {{ form_widget(form.atrib_imovel, {'attr': {'class': 'form-control white basic-multiple select2-parameters'}}) }}
                    {{ form_errors(form.atrib_imovel) }}
                </div>
                <div class="col s3" style="margin-bottom: 6px">
                    {{ form_label(form.atrib_edificacao, null, {'label_attr': {'class': '  '}}) }}
                    {{ form_widget(form.atrib_edificacao, {'attr': {'class': 'form-control white basic-multiple select2-parameters'}}) }}
                    {{ form_errors(form.atrib_edificacao) }}
                </div>
                <div class="col s12">
                    <div class="col s6 add space">
                        <a class="btn-floating white-text blue darken-4 btn-success" href="{{ path('tributario_imobiliario_configuracao_home') }}"><i class="material-icons">arrow_back</i></a>
                    </div>
                    <div class="col s6 right-align">
                        <button type="submit" id="form_submit" name="form[submit]"
                                class="white-text blue darken-4 btn btn-success save right">
                            <i class="material-icons left">save</i>{{ 'label.configuracaoImobiliaria.salvar'|trans }}
                        </button>
                    </div>
                </div>
            <div class="divider grey lighten-1  title-divider"><p>1</p></div>
            {{form_end(form) }}
        </div>
    </div>
</div>
{% endblock content %}

