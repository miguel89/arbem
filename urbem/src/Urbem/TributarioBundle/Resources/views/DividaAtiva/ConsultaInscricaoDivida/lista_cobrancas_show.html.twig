                                                                        <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.totalPagar'|trans }}</th>
                                                                        <td>
                                                                            R$ {{ admin.detalheParcela[parcela.cod_lancamento].valor_total|number_format(2, ',', '.') }}
                                                                        </td>
                                                                    </tr>
