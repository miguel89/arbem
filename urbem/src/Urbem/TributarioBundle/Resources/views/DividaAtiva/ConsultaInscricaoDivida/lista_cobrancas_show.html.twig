                                                                            <td class="td-rh">{{ acrescimo_valor|number_format(2, ',', '.') }}</td>
                                                                        {% endfor %}
                                                                    {% endif %}

                                                                    <td class="td-rh">
                                                                        {% if admin.listaDetalheCreditos[parcela.cod_lancamento]|length %}
                                                                            {{ admin.listaDetalheCreditos[parcela.cod_lancamento]|first.diferenca|number_format(2, ',', '.') }}
                                                                        {% endif %}
                                                                    </td>

                                                                    <td class="td-rh">
                                                                        {% if admin.listaDetalheCreditos[parcela.cod_lancamento]|length %}
                                                                            {{ admin.listaDetalheCreditos[parcela.cod_lancamento]|first.valor_total|number_format(2, ',', '.') }}
                                                                        {% endif %}
                                                                    </td>
                                                                </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
