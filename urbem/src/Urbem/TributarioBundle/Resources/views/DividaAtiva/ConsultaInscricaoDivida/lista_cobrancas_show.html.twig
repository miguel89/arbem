                                                                        <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.parcelaValor'|trans }}</th>
                                                                        <td>
                                                                            {% if admin.listaDetalheCreditos[parcela.cod_lancamento]|length %}
                                                                            R$ {{ admin.listaDetalheCreditos[parcela.cod_lancamento]|first.valor_credito|number_format(2, ',', '.') }}
                                                                            }
                                                                            {% endif %}
                                                                        </td>
                                                                    </tr>
                                                                    <tr class="sonata-ba-view-container">
                                                                        <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.parcelaDesconto'|trans }}</th>
                                                                        <td>
                                                                            {% if admin.listaDetalheCreditos[parcela.cod_lancamento]|length %}
                                                                                R$ {{ admin.listaDetalheCreditos[parcela.cod_lancamento]|first.credito_descontos|number_format(2, ',', '.') }}
