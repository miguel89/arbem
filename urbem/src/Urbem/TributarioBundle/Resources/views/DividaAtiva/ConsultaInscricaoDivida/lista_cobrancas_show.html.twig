                                                                </tr>
                                                                </thead>
                                                                <tbody>
                                                                <tr class="sonata-ba-view-container">
                                                                    <td class="td-rh">
                                                                        {% if admin.listaDetalheCreditos[parcela.cod_lancamento]|length %}
                                                                            {{ admin.listaDetalheCreditos[parcela.cod_lancamento]|first.credito_codigo_composto~' - '~admin.listaDetalheCreditos[parcela.cod_lancamento]|first.credito_nome }}
                                                                        {% endif %}
                                                                    </td>

                                                                    <td class="td-rh">
                                                                        {% if admin.listaDetalheCreditos[parcela.cod_lancamento]|length %}
                                                                            {{ admin.listaDetalheCreditos[parcela.cod_lancamento]|first.valor_credito|number_format(2, ',', '.') }}
                                                                        {% endif %}
                                                                    </td>
                                                                    
                                                                    <td class="td-rh">
                                                                        {% if admin.listaDetalheCreditos[parcela.cod_lancamento]|length %}
                                                                            {{ admin.listaDetalheCreditos[parcela.cod_lancamento]|first.credito_descontos|number_format(2, ',', '.') }}
                                                                        {% endif %}
                                                                    </td>

                                                                    {% if admin.listaDetalheCreditos[parcela.cod_lancamento]|length %}
