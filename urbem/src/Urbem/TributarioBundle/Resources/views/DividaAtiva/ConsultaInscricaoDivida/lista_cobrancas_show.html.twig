                                                                        <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.dataDevolucao'|trans }}</th>
                                                                        <td>
                                                                            {{ admin.detalheParcela[parcela.cod_lancamento].devolucao_data }}
                                                                        </td>
                                                                    </tr>
                                                                    <tr class="sonata-ba-view-container">
                                                                        <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.motivo'|trans }}</th>
                                                                        <td>
                                                                            {{ admin.detalheParcela[parcela.cod_lancamento].devolucao_descricao }}
                                                                        </td>
                                                                    </tr>
                                                                {% elseif admin.detalheParcela[parcela.cod_lancamento].pagamento_data %}
                                                                    <tr class="sonata-ba-view-container">
                                                                        <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.dataPagamento'|trans }}</th>
                                                                        <td>
                                                                            {{ admin.detalheParcela[parcela.cod_lancamento].pagamento_data }}
                                                                        </td>
                                                                    </tr>
                                                                    <tr class="sonata-ba-view-container">
                                                                        <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.lote'|trans }}</th>
                                                                        <td>
                                                                            {{ admin.detalheParcela[parcela.cod_lancamento].pagamento_cod_lote }}
                                                                        </td>
                                                                    </tr>
                                                                    <tr class="sonata-ba-view-container">
                                                                        <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.dataProcessamento'|trans }}</th>
                                                                        <td>
                                                                            {{ admin.detalheParcela[parcela.cod_lancamento].pagamento_data_baixa }}
                                                                        </td>
                                                                    </tr>
                                                                    {% if admin.detalheParcela[parcela.cod_lancamento].situacao != 'Baixa Manual' %}
                                                                        <tr class="sonata-ba-view-container">
                                                                            <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.banco'|trans }}</th>
                                                                            <td>
                                                                                {{ admin.detalheParcela[parcela.cod_lancamento].pagamento_num_banco ~'-'~ admin.detalheParcela[parcela.cod_lancamento].pagamento_nom_banco}}
                                                                            </td>
                                                                        </tr>
                                                                        <tr class="sonata-ba-view-container">
                                                                            <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.agencia'|trans }}</th>
                                                                            <td>
                                                                                {{ admin.detalheParcela[parcela.cod_lancamento].pagamento_num_agencia ~'-'~ admin.detalheParcela[parcela.cod_lancamento].pagamento_nom_agencia}}
                                                                            </td>
                                                                        </tr>
                                                                    {% endif %}

                                                                    {% if admin.detalheParcela[parcela.cod_lancamento].processo_pagamento %}
                                                                        <tr class="sonata-ba-view-container">
                                                                            <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.processoPagamento'|trans }}</th>
                                                                            <td>
                                                                                {{ admin.detalheParcela[parcela.cod_lancamento].processo_pagamento }}
                                                                            </td>
                                                                        </tr>
                                                                    {% endif %}
                                                                    {% if admin.detalheParcela[parcela.cod_lancamento].observacao %}
                                                                        <tr class="sonata-ba-view-container">
                                                                            <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.observacao'|trans }}</th>
                                                                            <td>
                                                                                {{ admin.detalheParcela[parcela.cod_lancamento].observacao }}
                                                                            </td>
                                                                        </tr>
                                                                    {% endif %}
                                                                    <tr class="sonata-ba-view-container">
                                                                        <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.usuario'|trans }}</th>
                                                                        <td>
                                                                            {{ admin.detalheParcela[parcela.cod_lancamento].pagamento_numcgm ~' - '~ admin.detalheParcela[parcela.cod_lancamento].pagamento_nomcgm }}
                                                                        </td>
                                                                    </tr>
                                                                    <tr class="sonata-ba-view-container">
                                                                        <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.valor'|trans }}</th>
                                                                        <td>
                                                                            R$ {{ admin.listaDetalheCreditos[parcela.cod_lancamento]|first.valor_credito|number_format(2, ',', '.') }}
                                                                        </td>
                                                                    </tr>
                                                                    <tr class="sonata-ba-view-container">
                                                                        <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.descontos'|trans }}</th>
                                                                        <td>
                                                                            R$ {{ admin.listaDetalheCreditos[parcela.cod_lancamento]|first.credito_descontos|number_format(2, ',', '.') }}
                                                                        </td>
                                                                    </tr>
