                                                                        <tr class="sonata-ba-view-container">
                                                                            <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.pagamentoDiferenca'|trans }}</th>
                                                                            <td>
                                                                                R$ {{ admin.detalheParcela[parcela.cod_lancamento].pagamento_diferenca|number_format(2, ',', '.') }}
                                                                            </td>
                                                                        </tr>
                                                                        <tr class="sonata-ba-view-container">
                                                                            <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.totalPago'|trans }}</th>
                                                                            <td>
                                                                                R$ {{ admin.detalheParcela[parcela.cod_lancamento].valor_total|number_format(2, ',', '.') }}
                                                                            </td>
                                                                        </tr>
                                                                    {% else %}
                                                                        <tr class="sonata-ba-view-container">
                                                                            <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.totalPagar'|trans }}</th>
                                                                            <td>
                                                                                R$ {{ admin.detalheParcela[parcela.cod_lancamento].valor_total|number_format(2, ',', '.') }}
                                                                            </td>
                                                                        </tr>
                                                                    {% endif %}
