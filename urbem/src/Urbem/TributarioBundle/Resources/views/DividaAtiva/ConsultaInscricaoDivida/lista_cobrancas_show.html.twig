                                                                <tr>
                                                                    <th class="th-rh">{{ 'label.dividaAtivaConsultaInscricao.detalhamentoCredito.credito'|trans }}</th>
                                                                    <th class="th-rh">{{ 'label.dividaAtivaConsultaInscricao.detalhamentoCredito.valor'|trans }}</th>
                                                                    <th class="th-rh">{{ 'label.dividaAtivaConsultaInscricao.detalhamentoCredito.descontos'|trans }}</th>
