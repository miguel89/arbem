                                                                    <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.ultimaNumeracao'|trans }}</th>
                                                                    <td>
                                                                        {{ parcela.numeracao~'/'~parcela.exercicio }}
                                                                    </td>
                                                                </tr>
                                                                <tr class="sonata-ba-view-container">
                                                                    <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.parcela'|trans }}</th>
                                                                    <td>
                                                                        {{ admin.detalheParcela[parcela.cod_lancamento].info_parcela }}
                                                                    </td>
                                                                </tr>
                                                                <tr class="sonata-ba-view-container">
                                                                    <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.vencimento'|trans }}</th>
                                                                    <td>
                                                                        {{ admin.detalheParcela[parcela.cod_lancamento].parcela_vencimento_original }}
                                                                    </td>
                                                                </tr>
                                                                <tr class="sonata-ba-view-container">
                                                                    <th>{{ 'label.dividaAtivaConsultaInscricao.detalhamentoParcela.situacao'|trans }}</th>
                                                                    <td>
                                                                        {{ admin.detalheParcela[parcela.cod_lancamento].situacao }}
                                                                    </td>
                                                                </tr>

                                                                {% if admin.detalheParcela[parcela.cod_lancamento].situacao == 'Devolucao' %}
