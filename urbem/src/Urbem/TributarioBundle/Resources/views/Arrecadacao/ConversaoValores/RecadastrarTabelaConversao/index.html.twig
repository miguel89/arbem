{% extends "base.html.twig" %}
{% block content %}
    <div class="container-rh">
        <div class="col s12 title-edit box-title-rh">
            <h5>{{ 'label.recadastrarTabelaConversao.dados'|trans }}</h5>
            <div class="divider grey title-divider"><p>1</p></div>
        </div>
        <div class="row">
            {{ form_start(form) }}
            <div class="col s4 field-filtro select-filtro">
                {{ form_label(form.exercicioOrigem, null, {'label_attr': {'class': 'control-label label-rh-select'}}) }}
                {{ form_widget(form.exercicioOrigem, {'attr': {'class': 'white input-rh browser-default'}}) }}
                {{ form_errors(form.exercicioOrigem) }}
                <div id="spinner" class="spinner-load-hide spinner-load ">
                    <i class="fa fa-spinner fa-spin fa-3x fa-fw"></i>
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
            <div class="col s4 field-filtro select-filtro">
                {{ form_label(form.tabela, null, {'label_attr': {'class': 'control-label label-rh-select'}}) }}
                {{ form_widget(form.tabela, {'attr': {'class': 'white input-rh browser-default'}}) }}
                {{ form_errors(form.tabela) }}
            </div>
            <div class="col s4 field-filtro select-filtro">
                {{ form_label(form.exercicioDestino, null, {'label_attr': {'class': 'control-label label-rh-select'}}) }}
                {{ form_widget(form.exercicioDestino, {'attr': {'class': 'white input-rh browser-default'}}) }}
                {{ form_errors(form.exercicioDestino) }}
            </div>
            <div class="col s12" style="margin-top: 20px">
                <button type="submit" class="waves-effect waves-light btn blue darken-4 btn btn-success save right" name="btn_update_and_list">
                    <i class="material-icons left">send</i>Salvar</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock content %}
{% block javascripts %}
<script type="text/javascript" src="{{ asset('/bundles/tributario/javascripts/arrecadacao/recadastrar-tabela-conversao.js') }}"></script>
{% endblock javascripts %}
