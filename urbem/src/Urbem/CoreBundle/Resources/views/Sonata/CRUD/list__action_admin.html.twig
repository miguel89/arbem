{% if admin.isGranted('VIEW', object) and admin.hasRoute('show') %}
    {% set key = admin.keyLinkAdminCustom %}
    {% set id = attribute(object, key) %}
    {% set link = admin.linkAdminCustom ~ id %}
        <a href="{{ link }}" class="blue-text text-darken-4 transparent z-depth-0 hide-on-med-and-down tooltipped btn-list" data-toggle="tooltip" data-placement="bottom" title="Evento">
            <i class="material-icons fa-lg">add_circle</i>
        </a>
{% endif %}
