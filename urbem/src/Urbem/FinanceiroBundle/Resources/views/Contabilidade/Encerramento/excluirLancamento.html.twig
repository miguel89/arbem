{% block style %}
    <style>
        .select2-container .select2-choice {
            height: 25px !important;
            line-height: 0.9 !important;
            position: relative !important;
            top: -10px !important;
        }
    </style>
{% endblock style %}
{% extends "base.html.twig" %}
{% block content %}
    <div class="container-rh">
        <div class="col s12 title-edit box-title-rh">
            <h5>{{ 'label.excluirLancamentosContabeisEncerramento'|trans }}</h5>
            <div class="divider grey title-divider"><p>1</p></div>
        </div>
        <div class="row">
            {{ form_start(form) }}
            <div class="col s4 field-filtro select-filtro">
                {{ form_label(form.entidade, null, {'label_attr': {'class': 'control-label label-rh'}}) }}
                {{ form_widget(form.entidade, {'attr': {'class': 'white input-rh-without-border browser-default'}}) }}
                {{ form_errors(form.entidade) }}
            </div>
            <div class="col s12" style="margin-top: 20px">
                <button type="submit"
                        class="waves-effect waves-light btn blue darken-4 btn btn-success save right"
                        name="btn_update_and_list">
                    <i class="material-icons left">save</i>Salvar
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock content %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('/bundles/financeiro/javascripts/contabilidade/encerramento/efetuar_lancamento.js') }}"></script>
{% endblock javascripts %}