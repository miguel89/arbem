{% set status = admin.verificaStatus(object) %}

{% if admin.hasRoute('edit') and status.saldoALiquidar == true %}
    <a href="{{ admin.generateObjectUrl('edit', object) }}?tipo=anular"
       class="blue-text text-darken-4 transparent z-depth-0 hide-on-med-and-down tooltipped btn-list"
       data-toggle="tooltip"
       data-placement="bottom"
       title="Anular Liquidação de Empenho">
        <i class="fa fa-ban fa-lg" aria-hidden="true"></i>
    </a>
{% else %}
    <a href="#"
       class="grey-text text-darken-4 transparent z-depth-0 hide-on-med-and-down tooltipped btn-list"
       data-toggle="tooltip"
       data-placement="bottom"
       title="Empenho ainda não foi anulado">
        <i class="grey-text fa fa-ban fa-lg" aria-hidden="true"></i>
    </a>
{% endif %}