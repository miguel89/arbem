{% if admin.isGranted('EDIT', object) and admin.hasRoute('edit') and admin.getAutorizacaoAnulada(object) is null %}
    <a href="{{ admin.generateObjectUrl('edit', object) }}" data-toggle="tooltip" data-placement="bottom" title="Editar" class="blue-text text-darken-4 transparent z-depth-0 hide-on-med-and-down tooltipped btn-list">
        <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
    </a>
{% else %}
    <a href="#" data-toggle="tooltip" data-placement="bottom" title="Editar" class="grey-text transparent z-depth-0 hide-on-med-and-down tooltipped btn-list">
        <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
    </a>
{% endif %}
