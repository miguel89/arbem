{% set status = admin.verificaStatus(object) %}
{% if admin.isGranted('EDIT', object) and admin.hasRoute('edit') and status.totalLiquidar == true %}
    <a href="#"
       class="grey-text text-darken-4 transparent z-depth-0 hide-on-med-and-down tooltipped btn-list"
       data-toggle="tooltip"
       data-placement="bottom"
       title="Empenho ainda não foi liquidado">
        <i class="fa fa-file-pdf-o fa-lg grey-text" aria-hidden="true"></i>
    </a>
{% else %}
    <a href="{{ admin.generateObjectUrl('reemitir_liquidacao', object) }}"
       class="blue-text text-darken-4 transparent z-depth-0 hide-on-med-and-down tooltipped btn-list"
       data-toggle="tooltip"
       data-placement="bottom"
       title="Reemitir Liquidação">
        <i class="fa fa-file-pdf-o fa-lg" aria-hidden="true"></i>
    </a>
{% endif %}