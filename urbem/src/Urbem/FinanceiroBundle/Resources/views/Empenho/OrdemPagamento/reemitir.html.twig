{% block body %}

    {% block content %}

        {% include 'FinanceiroBundle::Empenho/OrdemPagamento/header.html.twig' %}
        <div class="col-s12 divider">
            <p></p>
        </div>

        <div class="col-s12">
            <p></p>
        </div>

        <table border="1" width="100%">
            <thead>
                <tr>
                    <td>
                        <p><small>{{ 'label.ordemPagamento.codEntidade'|trans }}</small></p>
                        <p>{{ object.fkOrcamentoEntidade.codEntidade }} - {{ object.fkOrcamentoEntidade.fkSwCgm.nomCgm }}</p>
                    </td>
                </tr>
            </thead>
        </table>

        <div class="col-s12">
            <p></p>
        </div>

        <table border="1" width="100%">
            <thead>
                <tr>
                    <th><p><small>{{ 'label.ordemPagamento.empenho'|trans }}</small></p></th>
                    <th><p><small>{{ 'label.ordemPagamento.notaLiquidacao'|trans }}</small></p></th>
                    <th><p><small>{{ 'label.ordemPagamento.valorLiquidacao'|trans }}</small></p></th>
                    <th><p><small>{{ 'label.ordemPagamento.saldoLiquidacao'|trans }}</small></p></th>
                    <th><p><small>{{ 'label.ordemPagamento.valorAnulado'|trans }}</small></p></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><p>{{ dados.empenho }}</p></td>
                    <td><p>{{ dados.liquidacao }}</p></td>
                    <td><p>{{ dados.vlLiquidacao|number_format_currency('BRL') }}</p></td>
                    <td><p>{{ (dados.vlLiquidacao - dados.vlAnulado)|number_format_currency('BRL') }}</p></td>
                    <td><p>{{ dados.vlAnulado|number_format_currency('BRL') }}</p></td>
                </tr>
                <tr>
                    <td colspan="4"><p>Total</p></td>
                    <td><p>{{ dados.vlAnulado|number_format_currency('BRL') }}</p></td>
                </tr>
            </tbody>
        </table>

        <div class="col-s12">
            <p></p>
        </div>

        <table border="1" width="100%">
            <thead>
            <tr>
                <td>
                    <p>{{ 'label.ordemPagamento.anuladoEm'|trans }}: {{ dados.dtAnulacao }}</p>
                </td>
            </tr>
            </thead>
        </table>

        <div class="col-s12">
            <p></p>
        </div>

        <table border="1" width="100%">
            <thead>
            <tr>
                <td>
                    <p><small>{{ 'label.ordemPagamento.motivo'|trans }}:</small></p>
                    <p>{{ dados.motivo }}</p>
                </td>
            </tr>
            </thead>
        </table>

        <div class="col-s12">
            <p></p>
        </div>

        <div class="row">
            <div class="col-s12">
                <img src="data:image/png;base64,{{ codebar }}" />
            </div>
        </div>

    {% endblock content %}
{% endblock body %}

{% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="{{ absolute_url(asset('/bundles/sonatacore/vendor/bootstrap/dist/css/bootstrap.min.css')) }}" media="screen, projection"/>
    <link href="{{ absolute_url(asset('/bundles/core/css/relatorio.css')) }}" rel="stylesheet" media="screen" type="text/css">
    <link href="{{ absolute_url(asset('/bundles/core/css/relatorio.css')) }}" rel="stylesheet" media="print" type="text/css">
{% endblock %}
