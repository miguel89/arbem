{% if admin.isGranted('EDIT', object) %}
    {% if object.inativacao is null %}
    <a href="{{ path('urbem_administrativo_organograma_orgao_edit', { 'id': object.codOrgao }) }}" data-position="bottom" data-delay="50" data-tooltip="Editar" class="blue-text text-darken-4 transparent z-depth-0 hide-on-med-and-down tooltipped btn-list">
        <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
    </a>
    {% else %}
    <a href="#" data-position="bottom" data-delay="50" data-tooltip="Inativo" class="blue-text text-darken-4 transparent z-depth-0 hide-on-med-and-down tooltipped btn-list">
        <i class="fa fa-pencil fa-lg grey-text" aria-hidden="true"></i>
    </a>
    {% endif %}
{% endif %}
