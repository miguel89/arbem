{% extends 'CoreBundle::Sonata/standard_layout.html.twig' %}

{% block menu %}
    {% include '::partials/menu.html.twig' %}
{% endblock menu %}

{% block sonata_admin_content %}
{{ form_start(form) }}
<div class="row title-edit box-title-rh">
    <h3>Mudar Senha</h3>
    <div class="divider grey title-divider"><p>1</p></div>
</div>
{% for passwordField in form.password %}
<div class="row">
    <div class="form-field col s3">
        {{ form_label(passwordField, null, { 'attr': {'class': 'form-label control-label label-rh'} }) }}
        {{ form_widget(passwordField, {'attr': {'class': 'white input-senha'}}) }}
    </div>
</div>
{% endfor %}
    <div class="row">
        <div class="col s6">
            <a  class="btn-floating white required-text blue darken-4" href="{{ path('urbem_administrativo_administracao_usuarios_list') }}"><i class="material-icons">arrow_back</i></a>
        </div>
        <div class="col s6 right-align">
            <button type="submit" class="save waves-effect waves-light btn blue darken-4" value="Salvar"><i class="material-icons left">save</i> Salvar</button>
        </div>
    </div>
{{ form_end(form) }}
{% endblock sonata_admin_content %}
