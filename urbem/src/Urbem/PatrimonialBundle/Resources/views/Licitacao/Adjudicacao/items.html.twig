<table class="bordered highlight">
    <thead>
    <tr>
        <th width="3%"></th>
        <th width="50%">{{ 'label.itens.item'|trans }}</th>
        <th>{{ 'label.itens.lote'|trans }}</th>
        <th class="right-align">{{ 'label.itens.qtde'|trans }}</th>
        <th class="right-align">{{ 'label.itens.valorRef'|trans }}</th>
        <th class="right-align">{{ 'label.itens.valorTotal'|trans }}</th>
        <th class="right-align">{{ 'label.itens.status'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for item in itens %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ item.descricao_resumida }}</td>
            <td>{{ item.lote }}</td>
            <td class="right-align">{{ item.quantidade }}</td>
            <td class="right-align">{{ item.vl_unitario_referencia }}</td>
            <td class="right-align">{{ item.vl_total }}</td>
            <td class="right-align">{{ item.status }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
