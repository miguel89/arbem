{% extends "base.html.twig" %}

{% block title %}{{ 'label.servidor.modulo'|trans }}{% endblock title %}

{% block menu %}
    {% include '::partials/menu.html.twig' %}
{% endblock menu %}

{% block content %}
    <div class="container-rh">
        <div class="row">
            <div class="col s12 profile-box">
                <h4 class="grey-text text-darken-1 left">
                    {{ certificacao.fkSwCgm.nomcgm }}
                </h4>
                <a href="{{ path('urbem_patrimonial_licitacao_participante_certificacao_edit', { 'id': objectKey })}}" class="serv-btn right">
                    <i class="material-icons right">edit</i>
                </a>
                {#<h6><i class="mdi mdi-credit-card-multiple left"></i></h6>#}
                <h6 class="divider grey col s12"></h6>
                <div class="col s3 little-box">
                    <h6 class="col s12 blue-text text-darken-4 profile-titles">{{ 'label.patrimonial.participante_certificacao.exercicio'|trans }}</h6>
                    <h6 class="col s12 grey-text text-darken-1">{{ certificacao.exercicio }}</h6>
                </div>
                <div class="col s3 little-box">
                    <h6 class="col s12 blue-text text-darken-4 profile-titles">{{ 'label.patrimonial.participante_certificacao.dtRegistro'|trans }}</h6>
                    <h6 class="col s12 grey-text text-darken-1">{{ certificacao.dtRegistro|date("d/m/Y") }}</h6>
                </div>
                <div class="col s3 little-box">
                    <h6 class="col s12 blue-text text-darken-4 profile-titles">{{ 'label.patrimonial.participante_certificacao.finalVigencia'|trans }}</h6>
                    <h6 class="col s12 grey-text text-darken-1">{{ certificacao.finalVigencia|date("d/m/Y") }}</h6>
                </div>
                <div class="col s3 little-box">
                    <h6 class="col s12 blue-text text-darken-4 profile-titles">{{ 'label.patrimonial.participante_certificacao.observacao'|trans }}</h6>
                    <h6 class="col s12 grey-text text-darken-1">{{ certificacao.observacao }}</h6></h6>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s11 servidor-table">
                <a class="btn-flat tooltipped"
                   data-position="left"
                   data-delay="50"
                   data-tooltip="Incluir">
                    <i class="mdi mdi-source-branch left"></i>
                    {{ 'label.patrimonial.participante_certificacao.documentosExigidos'|trans }}
                </a>
            </div>
            <div class="col s1">
                <a href="{{ path('urbem_patrimonial_licitacao_certificacao_documentos_create',{'id': objectKey })}}"
                   class="btn-flat"><i class="mdi mdi-plus-circle left"></i></a>
            </div>
            <table class="col s12 highlight bordered">
                <thead class="thead-rh">
                <tr class="sonata-ba-list-field-header">
                    <th class="th-rh" width="5%">#</th>
                    <th class="th-rh">{{ 'label.patrimonial.participante_certificacao.numDocumento'|trans }}</th>
                    <th class="th-rh">{{ 'label.patrimonial.participante_certificacao.codDocumento'|trans }}</th>
                    <th class="th-rh" width="10%">{{ 'acoes'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for documento in documentos %}
                    <tr>
                        <td class="td-rh">{{ loop.index }}</td>
                        <td class="td-rh">{{ documento.numDocumento }}</td>
                        <td class="td-rh">{{ documento.fkLicitacaoDocumento.nomDocumento }}</td>
                        <td class="td-rh">
                            <div class="btn-group">
                                <a class="hide-on-med-and-down blue-text text-darken-4 tooltipped left"
                                   data-position="left"
                                   data-delay="50"
                                   data-tooltip="Editar"
                                   href="{{ path('urbem_patrimonial_licitacao_certificacao_documentos_edit', { 'id': model.getObjectIdentifier(documento) }) }}">
                                    <i class="material-icons">edit</i>
                                </a>
                                <a class="hide-on-med-and-down blue-text text-darken-4 tooltipped right"
                                   data-position="left"
                                   data-delay="50"
                                   data-tooltip="Excluir"
                                   href="{{ path('urbem_patrimonial_licitacao_certificacao_documentos_delete', { 'id': model.getObjectIdentifier(documento) }) }}">
                                    <i class="material-icons">delete</i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col s11 servidor-table">
                <a class="btn-flat tooltipped"
                   data-position="left"
                   data-delay="50"
                   data-tooltip="Incluir">
                    <i class="mdi mdi-bank left"></i>
                    {{ 'label.patrimonial.participante_certificacao.penalidadesCertificacao'|trans }}
                </a>
            </div>
            <div class="col s1">
                <a href="{{ path('urbem_patrimonial_licitacao_penalidades_certificacao_create',{'id': objectKey })}}"
                   class="btn-flat"><i class="mdi mdi-plus-circle left"></i></a>
            </div>
            <table class="col s12 highlight bordered">
                <thead class="thead-rh">
                <tr class="sonata-ba-list-field-header">
                    <th class="th-rh" width="5%">#</th>
                    <th class="th-rh">{{ 'label.patrimonial.penalidades_certificacao.codPenalidade'|trans }}</th>
                    <th class="th-rh">{{ 'label.patrimonial.penalidades_certificacao.dtPublicacao'|trans }}</th>
                    <th class="th-rh">{{ 'label.patrimonial.penalidades_certificacao.dtValidade'|trans }}</th>
                    <th class="th-rh" width="10%">{{ 'acoes'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for penalidade in penalidades %}
                    <tr>
                        <td class="td-rh">{{ loop.index }}</td>
                        <td class="td-rh">{{ penalidade.fkLicitacaoPenalidade.descricao }}</td>
                        <td class="td-rh">{{ penalidade.dtPublicacao|date("d/m/Y") }}</td>
                        <td class="td-rh">{{ penalidade.dtValidade|date("d/m/Y") }}</td>
                        <td class="td-rh">
                            <div class="btn-group">
                                <a class="hide-on-med-and-down blue-text text-darken-4 tooltipped left"
                                   data-position="left"
                                   data-delay="50"
                                   data-tooltip="Editar"
                                   href="{{ path('urbem_patrimonial_licitacao_penalidades_certificacao_edit', { 'id': model.getObjectIdentifier(penalidade) }) }}">
                                    <i class="material-icons">edit</i>
                                </a>
                                <a class="hide-on-med-and-down blue-text text-darken-4 tooltipped right"
                                   data-position="left"
                                   data-delay="50"
                                   data-tooltip="Excluir"
                                   href="{{ path('urbem_patrimonial_licitacao_penalidades_certificacao_delete', { 'id': model.getObjectIdentifier(penalidade) }) }}">
                                    <i class="material-icons">delete</i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock content %}
