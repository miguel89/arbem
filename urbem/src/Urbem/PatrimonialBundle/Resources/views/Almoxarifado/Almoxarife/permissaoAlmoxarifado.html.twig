{% extends 'SonataAdminBundle:CRUD:base_show_field.html.twig' %}
{% block field %}
    <table class="highlight bordered">
        <thead class="thead-rh">
        <tr>
            <th style="text-align: center !important;">{{ 'label.almoxarife.codAlmoxarifado'|trans }}
            <th style="text-align: center !important;">{{ 'label.padrao'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% if admin.data.fkAlmoxarifadoPermissaoAlmoxarifados is not empty %}
            {% for permissao in admin.data.fkAlmoxarifadoPermissaoAlmoxarifados %}
                <tr>
                    <td class="td-rh">{{ permissao.fkAlmoxarifadoAlmoxarifado.fkSwCgm }}</td>
                    <td class="td-rh">{{ permissao.padrao ? 'Sim' : 'Não' }}</td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td class="td-rh" colspan="3">Não existe itens cadastrados</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
{% endblock %}
