<div class="row">
    <div class="col s11 servidor-table">
        <a class="btn-flat tooltipped"
           data-position="left"
           data-delay="50"
           data-tooltip="Incluir">
            <i class="fa fa-cubes left" aria-hidden="true"></i>
            {{ 'label.almoxarifado.requisicao.itens'|trans }}
        </a>
    </div>


        <div class="col s1">
            {% if object.isPossivelManipularItens == true %}
                <a href="{{ path('urbem_patrimonial_almoxarifado_requisicao_item_create', { 'requisicao': admin.objectKey(object) }) }}"
                   class="btn-flat tooltipped"
                   data-position="right"
                   data-delay="50"
                   data-tooltip="Incluir">
                    <i class="mdi mdi-plus-circle left"></i>
                </a>
            {% endif %}
        </div>

    <table class="col s12 highlight bordered">
        <thead class="thead-rh">
        <tr><th class="th-rh" width="10">#</th>
            <th class="th-rh">{{ 'label.almoxarifado.requisicao.itensQuantidade'|trans }}</th>
            <th class="th-rh">{{ 'label.almoxarifado.requisicao.itensItem'|trans }}</th>
            <th class="th-rh">{{ 'label.almoxarifado.requisicao.itensTipoItem'|trans }}</th>
            <th class="th-rh">{{ 'label.almoxarifado.requisicao.itensMarca'|trans }}</th>
            {% if object.isPossivelManipularItens == true %}
                <th class="th-rh" width="100">{{ 'acoes'|trans }}</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for requisicaoItem in object.fkAlmoxarifadoRequisicaoItens %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ requisicaoItem.quantidade|number_format(4, ',') }}</td>
                <td>{{ requisicaoItem.fkAlmoxarifadoCatalogoItem.descricao }}</td>
                <td>{{ requisicaoItem.fkAlmoxarifadoCatalogoItem.fkAlmoxarifadoTipoItem }}</td>
                <td>{{ requisicaoItem.fkAlmoxarifadoMarca.descricao }}</td>
                {% if object.isPossivelManipularItens == true %}
                    <td>
                        <div class="btn-group">
                            <a class="hide-on-med-and-down blue-text text-darken-4 tooltipped left"
                               data-position="left"
                               data-delay="50"
                               data-tooltip="Editar"
                               href="{{ path('urbem_patrimonial_almoxarifado_requisicao_item_edit', { 'id': admin.objectKey(requisicaoItem) }) }}">
                                <i class="material-icons">edit</i>
                            </a>
                            <a class="hide-on-med-and-down blue-text text-darken-4 tooltipped right"
                               data-position="left"
                               data-delay="50"
                               data-tooltip="Excluir"
                               href="{{ path('urbem_patrimonial_almoxarifado_requisicao_item_delete', { 'id':admin.objectKey(requisicaoItem)}) }}">
                                <i class="material-icons">delete</i>
                            </a>
                        </div>

                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
