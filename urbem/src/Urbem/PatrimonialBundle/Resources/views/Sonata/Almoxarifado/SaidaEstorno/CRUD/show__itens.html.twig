<div class="row">
    <div class="col s12 servidor-table">
        <a style="font-size: 16px">
            <i class="fa fa-archive"></i>
            {{ 'label.inventario.itens.list'|trans }}
        </a>
    </div>
    <table class="col s12 highlight bordered">
        <thead class="thead-rh">
        <tr>
            <th class="th-rh" width="10"></th>
            <th class="th-rh">{{ 'label.entradaDiversos.codItem'|trans }}</th>
            <th class="th-rh">{{ 'label.entradaDiversos.unidade'|trans }}</th>
            <th class="th-rh">{{ 'label.entradaDiversos.quantidade'|trans }}</th>
            <th class="th-rh">{{ 'label.entradaDiversos.quantidadeEstorno'|trans }}</th>
            <th class="th-rh">{{ 'label.saidaEstorno.saldoEstornar'|trans }}</th>
            <th class="th-rh">{{ 'label.entradaDiversos.valorUnit'|trans }}</th>
            <th class="th-rh">{{ 'label.entradaDiversos.valorMercado'|trans }}</th>
            <th class="th-rh" width="100">{{ 'acoes'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for item in object.itensEntrada %}
        <tr>
            <td class="td-rh">{{ loop.index }}</td>
            <td class="td-rh">{{ item.cod_item }}</td>
            <td class="td-rh">{{ item.nom_unidade }}</td>
            <td class="td-rh text-right">{{ item.quantidade|number_format(4, ',', '.') }}</td>
            <td class="td-rh">{{ item.quantidade_estornada|abs|number_format(4, ',', '.') }}</td>
            <td class="td-rh">{{ (item.quantidade-item.quantidade_estornada)|number_format(4, ',', '.') }}</td>
            <td class="td-rh">{{ item.valor_unitario|number_format(2, ',', '.') }}</td>
            <td class="td-rh">{{ item.valor|number_format(2, ',', '.') }}</td>
            <td class="td-rh">
                <div class="btn-group">
                    <a href="{{ path('urbem_patrimonial_almoxarifado_saida_estorno_item_create', {
                        'naturezaLancamento': admin.id(object),
                        'catalogoItem': admin.id(item.cod_item)
                    }) }}"
                       class="hide-on-med-and-down blue-text text-darken-4 tooltipped left"
                       data-toggle="tooltip" data-placement="top" title="{{ 'editar'|trans }}"
                       id="manutencaoItem">
                        <i class="material-icons">edit</i>
                    </a>
                </div>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
