{% if admin.request.requestUri matches '{\/edit}' %}
    <div class="row">
        <div class="box box-primary">
            <div class="box-header col s12">
                <h2 class="col s12 box-title left-align show">
                    {{ 'label.almoxarifado.requisicao.requisicao'|trans }}
                </h2>
                <div class="divider grey title-divider"></div>
            </div>
            <div class="box-body">
                <div class="col s12">
                    <table class="table show-table">
                        <tbody>
                        <tr class="sonata-ba-view-container">
                            <th>{{ 'label.almoxarifado.requisicao.exercicio'|trans }}</th>
                            <td>{{ object.exercicio }}</td>
                        </tr>
                        <tr class="sonata-ba-view-container">
                            <th>{{ 'label.almoxarifado.requisicao.codRequisicao'|trans }}</th>
                            <td>{{ object.codRequisicao }}</td>
                        </tr>
                        <tr class="sonata-ba-view-container">
                            <th>{{ 'label.almoxarifado.cgmAlmoxarifado'|trans }}</th>
                            <td>{{ object.fkAlmoxarifadoAlmoxarifado.fkSwCgm.nomCgm }}</td>
                        </tr>
                        <tr class="sonata-ba-view-container">
                            <th>{{ 'label.almoxarifado.requisicao.dtRequisicao'|trans }}</th>
                            <td>{{ object.dtRequisicao|date('d/m/Y') }}</td>
                        </tr>
                        <tr class="sonata-ba-view-container">
                            <th>{{ 'label.almoxarifado.requisicao.observacao'|trans }}</th>
                            <td>{{ object.observacao }}</td>
                        </tr>
                        <tr class="sonata-ba-view-container">
                            <th>{{ 'label.almoxarifado.requisicao.requisitante'|trans }}</th>
                            <td>{{ object.fkSwCgm.nomCgm }}</td>
                        </tr>
                        <tr class="sonata-ba-view-container">
                            <th>{{ 'label.almoxarifado.requisicao.solicitante'|trans }}</th>
                            <td>{{ object.fkSwCgmRequisitante.nomCgm }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endif %}
