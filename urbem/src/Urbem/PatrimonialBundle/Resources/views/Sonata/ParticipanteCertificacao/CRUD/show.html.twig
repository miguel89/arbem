{% extends "CoreBundle::Sonata/standard_layout.html.twig" %}

{% import 'CoreBundle:Sonata/CRUD:base_show_macro.html.twig' as show_helper %}

{% block actions %}
    {% include 'CoreBundle:Sonata/CRUD:action_buttons.html.twig' %}
{% endblock %}

{% block content %}
    <div class="container-rh">
        <div class="row">
            <div class="col s12 profile-box">
                <h4 class="grey-text text-darken-1 left">
                    {{ object.certificacao.fkSwCgm.nomcgm }}
                </h4>
                <a href="{{ path('urbem_patrimonial_licitacao_participante_certificacao_edit', { 'id': object.certificacao|objectKey })}}" class="serv-btn right">
                    <i class="material-icons right">edit</i>
                </a>
                {#<h6><i class="mdi mdi-credit-card-multiple left"></i></h6>#}
                <h6 class="divider grey col s12"></h6>
                <div class="col s3 little-box">
                    <h6 class="col s12 blue-text text-darken-4 profile-titles">{{ 'label.patrimonial.participante_certificacao.exercicio'|trans }}</h6>
                    <h6 class="col s12 grey-text text-darken-1">{{ object.certificacao.exercicio }}</h6>
                </div>
                <div class="col s3 little-box">
                    <h6 class="col s12 blue-text text-darken-4 profile-titles">{{ 'label.patrimonial.participante_certificacao.dtRegistro'|trans }}</h6>
                    <h6 class="col s12 grey-text text-darken-1">{{ object.certificacao.dtRegistro|date("d/m/Y") }}</h6>
                </div>
                <div class="col s3 little-box">
                    <h6 class="col s12 blue-text text-darken-4 profile-titles">{{ 'label.patrimonial.participante_certificacao.finalVigencia'|trans }}</h6>
                    <h6 class="col s12 grey-text text-darken-1">{{ object.certificacao.finalVigencia|date("d/m/Y") }}</h6>
                </div>
                <div class="col s3 little-box">
                    <h6 class="col s12 blue-text text-darken-4 profile-titles">{{ 'label.patrimonial.participante_certificacao.observacao'|trans }}</h6>
                    <h6 class="col s12 grey-text text-darken-1">{{ object.certificacao.observacao }}</h6></h6>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s11 servidor-table">
                <a class="btn-lg tooltipped"
                   data-position="left"
                   data-delay="50"
                   data-tooltip="Incluir">
                    <i class="mdi mdi-source-branch left"></i>
                    {{ 'label.patrimonial.participante_certificacao.documentosExigidos'|trans }}
                </a>
            </div>
            <div class="col s1">
                <a href="{{ path('urbem_patrimonial_licitacao_certificacao_documentos_create',{'id': object.certificacao|objectKey })}}"
                   class="btn-lg"><i class="mdi mdi-plus-circle right"></i></a>
            </div>
            <table class="col s12 highlight bordered">
                <thead class="thead-rh">
                <tr class="sonata-ba-list-field-header">
                    <th class="th-rh" width="5%">#</th>
                    <th class="th-rh">{{ 'label.patrimonial.participante_certificacao.numDocumento'|trans }}</th>
                    <th class="th-rh">{{ 'label.patrimonial.participante_certificacao.codDocumento'|trans }}</th>
                    <th class="th-rh" width="10%">{{ 'acoes'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for documento in object.documentos %}
                    <tr>
                        <td class="td-rh">{{ loop.index }}</td>
                        <td class="td-rh">{{ documento.numDocumento }}</td>
                        <td class="td-rh">{{ documento.fkLicitacaoDocumento.nomDocumento }}</td>
                        <td class="td-rh">
                            <div class="btn-group">
                                <a class="hide-on-med-and-down blue-text text-darken-4 tooltipped left"
                                   data-position="left"
                                   data-delay="50"
                                   data-tooltip="Editar"
                                   href="{{ path('urbem_patrimonial_licitacao_certificacao_documentos_edit', { 'id': documento|objectKey }) }}">
                                    <i class="material-icons">edit</i>
                                </a>
                                <a class="hide-on-med-and-down blue-text text-darken-4 tooltipped right"
                                   data-position="left"
                                   data-delay="50"
                                   data-tooltip="Excluir"
                                   href="{{ path('urbem_patrimonial_licitacao_certificacao_documentos_delete', { 'id': documento|objectKey }) }}">
                                    <i class="material-icons">delete</i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col s11 servidor-table">
                <a class="btn-lg tooltipped"
                   data-position="left"
                   data-delay="50"
                   data-tooltip="Incluir">
                    <i class="mdi mdi-bank left"></i>
                    {{ 'label.patrimonial.participante_certificacao.penalidadesCertificacao'|trans }}
                </a>
            </div>
            <div class="col s1">
                <a href="{{ path('urbem_patrimonial_licitacao_penalidades_certificacao_create',{'id': object.certificacao|objectKey })}}"
                   class="btn-lg"><i class="mdi mdi-plus-circle right"></i></a>
            </div>
            <table class="col s12 highlight bordered">
                <thead class="thead-rh">
                <tr class="sonata-ba-list-field-header">
                    <th class="th-rh" width="5%">#</th>
                    <th class="th-rh">{{ 'label.patrimonial.penalidades_certificacao.codPenalidade'|trans }}</th>
                    <th class="th-rh">{{ 'label.patrimonial.penalidades_certificacao.dtPublicacao'|trans }}</th>
                    <th class="th-rh">{{ 'label.patrimonial.penalidades_certificacao.dtValidade'|trans }}</th>
                    <th class="th-rh" width="10%">{{ 'acoes'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for penalidade in object.penalidades %}
                    <tr>
                        <td class="td-rh">{{ loop.index }}</td>
                        <td class="td-rh">{{ penalidade.fkLicitacaoPenalidade.descricao }}</td>
                        <td class="td-rh">{{ penalidade.dtPublicacao|date("d/m/Y") }}</td>
                        <td class="td-rh">{{ penalidade.dtValidade|date("d/m/Y") }}</td>
                        <td class="td-rh">
                            <div class="btn-group">
                                <a class="hide-on-med-and-down blue-text text-darken-4 tooltipped left"
                                   data-position="left"
                                   data-delay="50"
                                   data-tooltip="Editar"
                                   href="{{ path('urbem_patrimonial_licitacao_penalidades_certificacao_edit', { 'id': penalidade|objectKey }) }}">
                                    <i class="material-icons">edit</i>
                                </a>
                                <a class="hide-on-med-and-down blue-text text-darken-4 tooltipped right"
                                   data-position="left"
                                   data-delay="50"
                                   data-tooltip="Excluir"
                                   href="{{ path('urbem_patrimonial_licitacao_penalidades_certificacao_delete', { 'id': penalidade|objectKey }) }}">
                                    <i class="material-icons">delete</i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <hr>
    <div class="sonata-ba-form-actions well well-small form-actions row">
        <div class="col s8 initial">
            <a href="{{ path('urbem_patrimonial_licitacao_participante_certificacao_list') }}"
               class="back btn-floating white-text blue darken-4 btn-success">
                <i class="material-icons">arrow_back</i>
                Add a comment to this line
            </a>
        </div>
    </div>
{% endblock content %}
