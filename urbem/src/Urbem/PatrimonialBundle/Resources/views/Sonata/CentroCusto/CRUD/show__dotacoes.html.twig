<div class="row">
    <div class="col s11 servidor-table">
        <a class="btn-flat tooltipped"
           data-position="left"
           data-delay="50"
           data-tooltip="Incluir">
            <i class="mdi mdi-source-branch left"></i>
            {{ 'label.patrimonial.almoxarifado.centrodecusto.dotacoes'|trans}}
        </a>
    </div>
    <div class="col s1"  style="margin-top: 20px">
            <a href="{{ path('urbem_patrimonial_almoxarifado_centro_custo_dotacao_create',{'id': object|objectKey }) }}"
               class="btn-lg"><i class="mdi mdi-plus-circle"></i></a>
    </div>
    <table class="col s12 highlight bordered">
        <thead class="thead-rh">
        <tr class="sonata-ba-list-field-header">
            <th class="th-rh" width="5%">#</th>
            <th class="th-rh">{{ 'label.patrimonial.almoxarifado.centrodecusto.descricao'|trans }}</th>
            <th class="th-rh" width="10%">{{ 'acoes'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for dotacao in object.fkAlmoxarifadoCentroCustoEntidades.last.fkAlmoxarifadoCentroCustoDotacoes %}
            <tr>
                <td class="td-rh">{{ loop.index }}</td>
                <td class="td-rh">{{ dotacao.codDespesa~' - '~dotacao.fkOrcamentoDespesa.fkOrcamentoContaDespesa.descricao }}</td>
                <td class="td-rh">
                    <div class="btn-group">
                        <a class="hide-on-med-and-down blue-text text-darken-4 tooltipped right"
                           data-position="left"
                           data-delay="50"
                           data-tooltip="Excluir"
                           href="{{ path('urbem_patrimonial_almoxarifado_centro_custo_dotacao_delete', { 'id': (dotacao|objectKey) }) }}">
                            <i class="material-icons">delete</i>
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
