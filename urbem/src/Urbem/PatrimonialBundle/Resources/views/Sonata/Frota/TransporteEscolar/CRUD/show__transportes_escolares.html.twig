<div class="row">
    <div class="col s12 servidor-table">
        <a class="btn-flat tooltipped"
           data-position="left"
           data-delay="50"
           data-tooltip="Incluir">
            <i class="fa fa-calendar left" aria-hidden="true"></i>
            {{ 'label.patrimonial.frota.transporteEscolar.informacoes'|trans }}
        </a>
    </div>
    <table class="col s12 highlight bordered">
        <thead class="thead-rh">
        <tr class="sonata-ba-list-field-header">
            <th class="th-rh">{{ 'label.patrimonial.frota.transporteEscolar.mes'|trans }}</th>
            <th class="th-rh">{{ 'label.patrimonial.frota.transporteEscolar.passageiros'|trans }}</th>
            <th class="th-rh">{{ 'label.patrimonial.frota.transporteEscolar.distancia'|trans }}</th>
            <th class="th-rh">{{ 'label.patrimonial.frota.transporteEscolar.diasRodados'|trans }}</th>
            <th class="th-rh">{{ 'label.patrimonial.frota.transporteEscolar.turno'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for transporteEscolar in object.fkFrotaTransporteEscolares %}
            {% if transporteEscolar.passageiros > 0
                  and transporteEscolar.distancia > 0
                  and transporteEscolar.diasRodados > 0 %}
            <tr>
                <td class="td-rh">{{ transporteEscolar.fkAdministracaoMes.descricao }}</td>
                <td class="td-rh">{{ transporteEscolar.passageiros }}</td>
                <td class="td-rh">{{ transporteEscolar.distancia }}</td>
                <td class="td-rh">{{ transporteEscolar.diasRodados }}</td>
                <td class="td-rh">{{ transporteEscolar.fkFrotaTurno.descricao }}</td>
            </tr>

            {% endif %}
        {% endfor %}
        </tbody>
    </table>
</div>
