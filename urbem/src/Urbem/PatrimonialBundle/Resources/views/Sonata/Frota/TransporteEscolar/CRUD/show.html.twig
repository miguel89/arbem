{% extends "base.html.twig" %}

{% block title %}{{ 'label.fornecedor.modulo'|trans }}{% endblock title %}

{% block menu %}
    {% include '::partials/menu.html.twig' %}
{% endblock menu %}

{% block content %}

    <div class="container-rh">
        <div class="row">
            <div class="col s12 profile-box">
                <h5 class="blue-text text-darken-4 left">
                    <i class="material-icons left">directions_bus</i>
                    {{ 'label.patrimonial.frota.transporteEscolar.dadosVeiculo'|trans|upper }}
                </h5>
                <a href="{{ path('urbem_patrimonial_frota_transporte_escolar_edit', { 'id': admin.objectKey(object) }) }}"
                   class="serv-btn right">
                    <i class="material-icons right">edit</i>
                </a>

                <h6 class="divider grey col s12"></h6>

                {# Escola #}
                <div class="col s6 little3-box">
                    <h6 class="col s12 blue-text text-darken-4 profile-titles">{{ 'label.cgmEscola'|trans }}</h6>
                    <h6 class="col s12 grey-text text-darken-1">{{ object.fkSwCgm }}</h6>
                </div>

                {# Veiculo #}
                <div class="col s6 little3-box">
                    <h6 class="col s12 blue-text text-darken-4 profile-titles">{{ 'label.infracao.codVeiculo'|trans }}</h6>
                    <h6 class="col s12 grey-text text-darken-1">{{ object.fkFrotaTransporteEscolares.first.fkFrotaVeiculo }}</h6>
                </div>
            </div>
        </div>

        {% include 'PatrimonialBundle:Sonata/Frota/TransporteEscolar/CRUD:show__transportes_escolares.html.twig' %}

        <div class="row">
            <div class="col s12 add space">
                <a class="btn-floating white-text blue darken-4 btn-success"
                   href="{{ path('urbem_patrimonial_frota_transporte_escolar_list') }}">
                    <i class="material-icons">arrow_back</i>
                </a>
            </div>
        </div>
    </div>

{% endblock %}
