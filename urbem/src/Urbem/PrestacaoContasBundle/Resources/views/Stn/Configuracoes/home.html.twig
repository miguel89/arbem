{% extends "base_home_cards.html.twig" %}
{% block content %}
<div class="container">
    <div class="container">
        <h4 class="blue-text text-darken-4">{{ titlePage }}</h4>
        <div class="divider grey title-divider"><p>1</p></div>
    </div>
    <div class="container">
        {% for configuracao in configuracoes %}
            <div class="col s6 m6 l3">
                <div class="card-panel col s12 hoverable center">
                    <a style="color: #ccc" title="{{ configuracao['title'] }}">
                        <h6><i style="color: #ccc" class="material-icons medium">{{ configuracao['icon'] }}</i></h6>
                        <h6 style="color: #ccc !important;" class="truncate center">{{ configuracao['title'] }}</h6>
                    </a>
                    <p></p>
                    <div class="divider col s12"></div>
                    {% if configuracao['route_add'] is not empty %}
                        <h5 class="left">
                            <a style="color: #ccc" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Incluir"><i style="color: #ccc" class="material-icons">&#xE147;</i></a>
                        </h5>
                    {% endif %}

                    {% if configuracao['route_list'] is not empty %}
                        <h5 class="right">
                            <a style="color: #ccc" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Procurar"><i style="color: #ccc" class="material-icons">list</i></a>
                        </h5>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock content %}