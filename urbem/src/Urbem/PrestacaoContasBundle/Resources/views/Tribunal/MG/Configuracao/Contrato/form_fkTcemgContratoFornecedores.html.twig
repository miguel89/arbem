{% block form_row %}
    <div class="box-body no-padding">
        <table class="table show-table">
            <tbody>
                <tr class="sonata-ba-view-container">
                    <th>{{ form_label(form.fkComprasFornecedor) }}</th>
                    <td>
                        {{ form_widget(form.fkComprasFornecedor) }}
                        {{ form_errors(form.fkComprasFornecedor) }}
                    </td>
                </tr>

                <tr class="sonata-ba-view-container">
                    <th>{{ form_label(form.cgmFornecedor) }}</th>
                    <td>
                        {{ form_widget(form.cgmFornecedor) }}
                        {{ form_errors(form.cgmFornecedor) }}
                    </td>
                </tr>

                <tr>
                    <th>&nbsp;</th>
                    <td>
                        <a href="#" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Incluir"><i class="material-icons">remove_circle</i></a>
                    </td>
                </tr>
            <tbody>
        </table>

        {{ form_rest(form) }}
    </div>

{% endblock form_row %}